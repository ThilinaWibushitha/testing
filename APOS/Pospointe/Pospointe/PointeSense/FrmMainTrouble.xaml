<Window x:Class="Pospointe.PointeSense.FrmMainTrouble"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="PointeSense Dashboard"
        WindowState="Maximized"
        Loaded="Window_Loaded" 
        Background="{DynamicResource BackgroundBrush}"
        Height="768" Width="1366"
        WindowStyle="None"
>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30" >

            <Grid Height="80">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Border Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Background="Transparent"
                        CornerRadius="20 20 0 0" />
                
                <TextBlock Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Text="Get Support"
                           Style="{StaticResource Header1}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />

                <Button VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        x:Name="BtnClose"
                        Style="{StaticResource Icobtn}"
                        Grid.Column="2"
                        Grid.ColumnSpan="2"
                        Grid.Row="4"
                        Click="BtnClose_Click">
                    <iconPacks:PackIconFontAwesome Style="{StaticResource Icobtnico}"
                                                   Kind="CircleXmarkSolid"
                                                   Height="50"
                                                   Width="120"
                                                   VerticalAlignment="Center"
                                                   Foreground="#1D1E27" />
                </Button>
            </Grid>

            

            <WrapPanel x:Name="WrapTilePanel"
                       HorizontalAlignment="Left"
                       ItemWidth="360"
                       ItemHeight="170"
                       Width="Auto"
                       Margin="0"
                       MaxWidth="1150">

                <Border Background="{StaticResource Appboarderfill}"
                        Margin="10"
                        Padding="20"
                        CornerRadius="16"
                        Width="360"
                        Height="200">

                    <StackPanel VerticalAlignment="Stretch">

                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0 0 0 12">
                            <iconPacks:PackIconFontAwesome Kind="PhoneSolid"
                                                           Width="20"
                                                           Height="20"
                                                           Foreground="Black"
                                                           VerticalAlignment="Center" />
                            <TextBlock Text="Request Support"
                                       Style="{StaticResource Header3}"
                                       Margin="10 0 0 0"
                                       VerticalAlignment="Center" />
                        </StackPanel>

                        <TextBlock x:Name="LblReqSupprt"
                                   Text="Request Callback"
                                   Foreground="Black"
                                   FontSize="13"
                                   FontWeight="SemiBold" />

                        <Button x:Name="BtnReqSupprt"
                                Content="Request"
                                Margin="0,20,0,0"
                                
                                Width="120"
                                Height="28"
                                Style="{StaticResource btnToolbox}"
                                FontSize="11"
                                HorizontalAlignment="Left"
                                Click="BtnReqSupprt_Click" />

                    </StackPanel>
                </Border>

                <Border Background="{StaticResource Appboarderfill}" 
                        Margin="10"
                        Padding="20"
                        CornerRadius="16"
                        Width="360"
                        Height="170">
                    
                    <StackPanel VerticalAlignment="Stretch" >
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 12">
                            <iconPacks:PackIconFontAwesome Kind="DownloadSolid"
                                           Width="20"
                                           Height="20"
                                           Foreground="Black"
                                           VerticalAlignment="Center"/>
                            
                            <TextBlock Text="POS Software Update"
                                       Style="{StaticResource Header3}"
                                       Margin="10 0 0 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock x:Name="LblUpdateStatus"
                                   Text="⚠️ Updates pending"
                                   Foreground="Black"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Margin="0 0 0 1"/>

                        <Button x:Name="BtnRunUpdate"
                                Style="{StaticResource btnToolbox}"
                                Margin="0,20,0,0"
                                FontSize="11"
                                Content="Update Now"
                                Width="120"
                                Height="28"
                                HorizontalAlignment="Left"
                                BorderThickness="1"
                                Cursor="Hand"/>
                    </StackPanel>
                </Border>


                <Border Background="{StaticResource Appboarderfill}" 
                        Margin="10"
                        Padding="20"
                        CornerRadius="16"
                        Width="360"
                        Height="170">
                    
                    <StackPanel VerticalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 12">
                            <iconPacks:PackIconFontAwesome Kind="PrintSolid"
                                           Width="20"
                                           Height="20"
                                           Foreground="Black"
                                           VerticalAlignment="Center"/>
                            
                            <TextBlock Text="Printer Queue Monitor"
                                       Style="{StaticResource Header3}"
                                       Margin="10 0 0 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock x:Name="LblPrinterQueueStatus"
                                   Text="Checking queues..."
                                   Foreground="Black"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   />

                        
                        <Button Content="Clear All Queues"
                                Width="150"
                                Height="28"
                                Style="{StaticResource btnToolbox}"
                                FontSize="11"
                                Margin="0,20,0,0"
                                HorizontalAlignment="Left"
                                Click="BtnClearPrintQueue_Click"/>
                    </StackPanel>
                </Border>

                <Border Background="{StaticResource Appboarderfill}" 
                        Margin="10"
                        Padding="20"
                        CornerRadius="16"
                        Width="360"
                        Height="170">

                    <StackPanel VerticalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 12">
                            <iconPacks:PackIconFontAwesome Kind="NetworkWiredSolid"
                                           Width="20"
                                           Height="20"
                                           Foreground="Black"
                                           VerticalAlignment="Center"/>
                            
                            <TextBlock Text="Network Connectivity"
                                       Style="{StaticResource Header3}"
                                       Margin="10 0 0 0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock x:Name="LblNetworkStatus"
                                   Text="Checking network..."
                                   Foreground="Black"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   />

                        <Button x:Name="BtnRunNetworkTest"
                                Content="Run Test"
                                Width="120"
                                Margin="0,20,0,0"
                                Height="28"
                                Style="{StaticResource btnToolbox}"
                                FontSize="11"
                                HorizontalAlignment="Left"
                                Click="BtnRunNetworkTest_Click"/>
                    </StackPanel>
                </Border>

                <Border Background="{StaticResource Appboarderfill}" 
                        Margin="10"
                        Padding="20"
                        CornerRadius="16"
                        Width="360"
                        Height="200">
                    
                    <StackPanel VerticalAlignment="Stretch" >

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 12">
                            <iconPacks:PackIconFontAwesome Kind="CreditCardSolid"
                                           Width="20"
                                           Height="20"
                                           Foreground="Black"
                                           VerticalAlignment="Center"/>
                            <TextBlock Text="Payment Terminal"
                       Style="{StaticResource Header3}"
                       Margin="10 0 0 0"
                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock x:Name="LblPaxTerminalStatus"
                                   Text="Checking terminal..."
                                   Foreground="Black"
                                   FontSize="13"
                                   FontWeight="SemiBold"/>

                        <Button x:Name="BtnFixPaxTerminal"
                                Content="Fix Now"
                                Width="120"
                                Height="28"
                                Margin="0,20,0,0"
                                Style="{StaticResource btnToolbox}"
                                FontSize="11"
                                HorizontalAlignment="Left"
                                Click="BtnFixPaxTerminal_Click"/>

                        <CheckBox x:Name="ChkAutoFixPaxTerminal"
                                  Content="Enable Auto-Fix"
                                  FontSize="12"
                                  Foreground="White"
                                  VerticalAlignment="Center"
                                  Checked="ChkAutoFixPaxTerminal_Checked"
                                  Unchecked="ChkAutoFixPaxTerminal_Unchecked"
                                  Margin="0 8 0 0"/>
                    </StackPanel>
                </Border>

                <Border Background="{StaticResource Appboarderfill}" 
                             Margin="10"
                             Padding="20"
                             CornerRadius="16"
                             Width="360"
                             Height="200">

                    <StackPanel VerticalAlignment="Stretch" >

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 12">
                            <iconPacks:PackIconFontAwesome Kind="DesktopSolid"
                            Width="20"
                            Height="20"
                            Foreground="Black"
                            VerticalAlignment="Center"/>
                            <TextBlock Text="Remote Access"
                            Style="{StaticResource Header3}"
                            Margin="10 0 0 0"
                            VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock x:Name="LblRemoteAccess"
                            Text="Connecting via AnyDesk or RustDesk"
                            Foreground="Black"
                            FontSize="13"
                            FontWeight="SemiBold"/>

                        <Button 
                             Content="Connect Now"
                             Width="120"
                             Height="28"
                             Margin="0,20,0,0"
                             Style="{StaticResource btnToolbox}"
                             FontSize="11"
                             HorizontalAlignment="Left"
                             Click="BtnRemoteAccess"/>
                        <!--Click="BtnRemoteAccess_Click"/>-->
                            

                    </StackPanel>
                </Border>





            </WrapPanel>

        </StackPanel>
    </ScrollViewer>
</Window>
