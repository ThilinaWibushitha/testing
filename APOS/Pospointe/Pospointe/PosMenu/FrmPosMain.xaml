<Window
    x:Class="Pospointe.PosMenu.FrmPosMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Pospointe.PosMenu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FrmPosMain"
    Width="1366"
    Height="768"
    Background="{DynamicResource BackgroundBrush}"
    Loaded="Window_Loaded"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="7*" />
            <RowDefinition Height="1.5*" />
        </Grid.RowDefinitions>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>


        <Button
            x:Name="BtnHome"
            Grid.Row="0"
            Margin="15"
            Click="BtnHome_Click"
            Style="{StaticResource Settingsbtns3}">

            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterial
                    Width="30"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Kind="Home"
                    Style="{StaticResource menuButtonIcon3}" />
            </StackPanel>
        </Button>

        <TextBox
            x:Name="TxtScan"
            Grid.Column="2"
            KeyDown="TxtScan_KeyDown"
            LostFocus="TxtScan_LostFocus"
            Style="{StaticResource NormText}"
            Visibility="Hidden" 
            Margin="9,0,0,0" 
            Width="241" 
            HorizontalAlignment="Left" />

        <StackPanel Orientation="Horizontal" 
                    Grid.Column="3" 
                    VerticalAlignment="Center" 
                    Margin="271,0,20,0" 
                    HorizontalAlignment="Right" MinWidth="200">

            <Border 
                Background="#F5F5F5" 
                CornerRadius="25" 
                Padding="15,8,20,8"
                BorderBrush="#E0E0E0"
                BorderThickness="1">

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border 
                        Background="#FFB31B1B" 
                        CornerRadius="20" 
                        Width="40" 
                        Height="40" 
                        Margin="0,0,12,0">
                        <iconPacks:PackIconMaterial
                            x:Name="txtOrderTypeIcon"
                            Kind="BikeFast"
                            Width="24"
                            Height="24"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Foreground="White"
                            
                            />
                    </Border>

                    <TextBlock
                        x:Name="txtOrderType"
                        Text="Take Away"
                        FontSize="22"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"
                        Foreground="#FFB31B1B"
                        
                        />
                </StackPanel>
            </Border>
        </StackPanel>


        <Image
            x:Name="ImgBox"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Source="https://i.postimg.cc/v8hw4ZJ7/POS-POINTE-1.png"
            Stretch="Uniform" />

        <Border
            x:Name="NotificationBorder"
            Grid.Row="0"
            Grid.Column="1"
            Margin="30,30,0,0"
            Padding="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="LightYellow"
            BorderBrush="DarkGoldenrod"
            BorderThickness="2"
            CornerRadius="8"
            Visibility="Collapsed">
            <Label
                x:Name="LblNotification"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content=""
                FontSize="14"
                Foreground="DarkGreen" />
        </Border>



        <Grid Grid.Row="1" Margin="0,10,0,10">
            <ScrollViewer
                x:Name="DepartmentScrollViewer"
                HorizontalScrollBarVisibility="Disabled"
                PanningMode="VerticalOnly"
                VerticalScrollBarVisibility="Hidden">
                <WrapPanel x:Name="WrpDepartment" Orientation="Horizontal" />
            </ScrollViewer>
        </Grid>

        <!--  Load Items Area  -->
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,10,0,10">
            <ScrollViewer
                x:Name="ItemScrollViewer"
                HorizontalScrollBarVisibility="Disabled"
                PanningMode="VerticalOnly"
                VerticalScrollBarVisibility="Hidden">
                <WrapPanel x:Name="WrpItems" Orientation="Horizontal" />
            </ScrollViewer>
        </Grid>

        <!--  Data Grid Area  -->

        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="7.5*" />
                <RowDefinition Height="2.5*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Margin="0,0,10,0"
                Padding="5"
                Background="{StaticResource Appboarderfill}"
                BorderBrush="#D3D3D3"
                BorderThickness="1"
                CornerRadius="10">

                <DataGrid
                    x:Name="ItemDataGrid"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    AlternatingRowBackground="{DynamicResource DataGridRowBackground}"
                    AutoGenerateColumns="False"
                    Background="{DynamicResource DataGridBackground}"
                    BorderThickness="0"
                    CanUserAddRows="False"
                    CanUserResizeColumns="False"
                    ColumnHeaderHeight="50"
                    Foreground="{DynamicResource DataGridTextBrush}"
                    GridLinesVisibility="None"
                    HeadersVisibility="Column"
                    HorizontalGridLinesBrush="Transparent"
                    HorizontalScrollBarVisibility="Hidden"
                    MouseDoubleClick="ItemDataGrid_MouseDoubleClick"
                    RowBackground="{DynamicResource DataGridBackground}"
                    RowHeight="50"
                    SelectionMode="Single"
                    SelectionUnit="FullRow"
                    TouchDown="ItemDataGrid_TouchDown"
                    VerticalGridLinesBrush="Transparent"
                    VerticalScrollBarVisibility="Auto">


                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource DataGridRowBackground}" />
                            <Setter Property="Foreground" Value="{StaticResource DataGridTextBrush}" />
                            <Setter Property="FontSize" Value="15" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Setter Property="Padding" Value="10" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Border
                                            Padding="5"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="8">
                                            <TextBlock
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Foreground="{TemplateBinding Foreground}"
                                                Text="{TemplateBinding Content}" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <Style TargetType="DataGridRow">
                            <Setter Property="SnapsToDevicePixels" Value="True" />
                            <Setter Property="Padding" Value="10" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridRow">
                                        <Border
                                            Margin="5,2,5,2"
                                            Padding="5"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="5">
                                            <DataGridCellsPresenter />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.Resources>



                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="0.8*" Header="No">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="15"
                                            FontWeight="SemiBold"
                                            Text="{Binding OrderNo}" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Width="4*" Header="Item Name">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding ItemName}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsVoided}" Value="True">
                                                            <Setter Property="Foreground" Value="Red" />
                                                            <Setter Property="FontStyle" Value="Italic" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            FontWeight="SemiBold"
                                            Text="{Binding Price, StringFormat='{}{0:C}'}" />
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                        <!--  Quantity  -->
                        <DataGridTemplateColumn Width="1.5*" Header="QTY">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Margin="10,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Text="{Binding Quantity}" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Width="1.5*" Header="Total">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Margin="10,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Text="{Binding TotalPrice, StringFormat='{}{0:C}'}" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>

            </Border>

            <Grid Grid.Row="1" ShowGridLines="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />

                </Grid.RowDefinitions>

                <Border
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    Margin="0,0,10,0"
                    Background="{StaticResource Appboarderfill}"
                    CornerRadius="20" />

                <Grid Grid.Column="1" ShowGridLines="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        x:Name="TxtSubtotal"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="17"
                        Style="{StaticResource UiTextBlockStyle}"
                        Text="SUBTOTAL :" />

                    <TextBlock
                        x:Name="TxtDiscount"
                        Grid.Row="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="17"
                        Style="{StaticResource UiTextBlockStyle}">
                        <Run Text="Discount" />
                        <Run x:Name="DiscountTxt" FontSize="17"/>
                        <Run Text=":" />
                    </TextBlock>

                    <TextBlock
                        x:Name="TxtTax"
                        Grid.Row="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="17"
                        Style="{StaticResource UiTextBlockStyle}"
                        TextWrapping="Wrap">
                        <Run Text="TAX" />
                        <Run x:Name="RunTaxRate" FontSize="17"/>
                        <Run Text=":" />
                    </TextBlock>


                    <TextBlock
                        x:Name="TxtTotal"
                        Grid.Row="3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Style="{StaticResource UiTextBlockStyle}"
                        Text="TOTAL :" />

                </Grid>


                <Grid Grid.Column="2" ShowGridLines="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        x:Name="LblSubtotal"
                        Grid.Row="0"
                        Margin="0,0,60,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="17"
                        Style="{StaticResource UiTextBlockStyle}"
                        Text="0.00" />

                    <TextBlock
                        x:Name="LblDiscount"
                        Grid.Row="1"
                        Margin="0,0,60,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="17"
                        Style="{StaticResource UiTextBlockStyle}"
                        Text="0.00" />

                    <TextBlock
                        x:Name="LblTax"
                        Grid.Row="2"
                        Margin="0,0,60,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="17"
                        Style="{StaticResource UiTextBlockStyle}"
                        Text="0.00" />

                    <TextBlock
                        x:Name="LblTotal"
                        Grid.Row="3"
                        Margin="0,0,60,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Style="{StaticResource UiTextBlockStyle}"
                        Text="0.00" />
                </Grid>

                <Grid Grid.Column="0" ShowGridLines="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <Button
                        x:Name="BtnReset"
                        Grid.Row="0"
                        Click="BtnReset_Click"
                        Style="{StaticResource SettingsSmallbtns}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                                Width="20"
                                Height="30"
                                Margin="20,0,0,0"
                                VerticalAlignment="Center"
                                Kind="BasketRemove"
                                Style="{StaticResource menuButtonIcon}" />
                            <TextBlock
                                Width="150"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Text="Reset"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Button>

                    <Button
                        x:Name="BtnDiscount"
                        Grid.Row="1"
                        Click="BtnDiscount_Click"
                        Style="{StaticResource SettingsSmallbtns}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                                Width="20"
                                Height="30"
                                Margin="20,0,0,0"
                                VerticalAlignment="Center"
                                Kind="PercentCircle"
                                Style="{StaticResource menuButtonIcon}" />
                            <TextBlock
                                Width="150"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Text="Discount"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Button>

                    <Button
                        x:Name="BtnTax"
                        Grid.Row="2"
                        Click="BtnTax_Click"
                        Style="{StaticResource SettingsSmallbtns}">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                                Width="20"
                                Height="30"
                                Margin="20,0,0,0"
                                VerticalAlignment="Center"
                                Kind="CloseCircle"
                                Style="{StaticResource menuButtonIcon}" />
                            <TextBlock
                                Width="150"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Text="Tax"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>

        <Grid
            Grid.Row="2"
            Grid.ColumnSpan="3"
            ShowGridLines="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Button
                x:Name="Btn1"
                Grid.Column="0"
                Margin="5"
                Background="#252525"
                Click="Btn1_Click"
                Style="{StaticResource Settingsbtns}">
                <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Width="30"
                            Height="40"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Kind="CloseCircle"
                            Style="{StaticResource menuButtonIcon}" />
                        <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Left" Text="Custom" />
                            <TextBlock HorizontalAlignment="Left" Text="Btn" />
                        </StackPanel>
                    </StackPanel>
                </Viewbox>
            </Button>

            <Button
                x:Name="Btn2"
                Grid.Column="1"
                Margin="5"
                Background="#252525"
                Click="Btn2_Click"
                Style="{StaticResource Settingsbtns}">
                <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Width="30"
                            Height="40"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Kind="CloseCircle"
                            Style="{StaticResource menuButtonIcon}" />
                        <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Left" Text="Custom" />
                            <TextBlock HorizontalAlignment="Left" Text="Btn" />
                        </StackPanel>
                    </StackPanel>
                </Viewbox>
            </Button>

            <Button
                x:Name="Btn3"
                Grid.Column="2"
                Margin="5"
                Background="#252525"
                Click="Btn3_Click"
                Style="{StaticResource Settingsbtns}">
                <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Width="30"
                            Height="40"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Kind="CloseCircle"
                            Style="{StaticResource menuButtonIcon}" />
                        <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Left" Text="Custom" />
                            <TextBlock HorizontalAlignment="Left" Text="Btn" />
                        </StackPanel>
                    </StackPanel>
                </Viewbox>
            </Button>

            <Button
                x:Name="BtnMoreOption"
                Grid.Column="3"
                Margin="5"
                Click="Btn4_Click"
                Style="{StaticResource Settingsbtns}">
                <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Width="30"
                            Height="40"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Kind="More"
                            Style="{StaticResource menuButtonIcon}" />
                        <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Center" Text="Options" />
                        </StackPanel>
                    </StackPanel>
                </Viewbox>
            </Button>

            <Button
                x:Name="BtnOrderType"
                Grid.Column="4"
                Background="#252525"
                Margin="5"
                Click="BtnOrderType_Click"
                Style="{StaticResource Settingsbtns}">
                <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Width="30"
                            Height="40"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Kind="Store"
                            Style="{StaticResource menuButtonIcon}" />
                        <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock 
                               HorizontalAlignment="Left"
                               Text="Switch To" />
                            <TextBlock x:Name="BtnOrderTypeText"
                               HorizontalAlignment="Center"
                               Text="Dine-In" />
                        </StackPanel>
                    </StackPanel>
                </Viewbox>
            </Button>



            <Button
                x:Name="BtnGiftCard"
                Grid.Row="1"
                Grid.Column="0"
                Margin="5"
                Click="BtnGiftCard_Click"
                Style="{StaticResource Settingsbtns}">
                <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Width="30"
                            Height="40"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Kind="Gift"
                            Style="{StaticResource menuButtonIcon}" />
                        <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Left" Text="Gift Card" />
                        </StackPanel>
                    </StackPanel>
                </Viewbox>
            </Button>

            <Button
                x:Name="BtnRecallInvoice"
                Grid.Row="1"
                Grid.Column="1"
                Margin="5"
                Click="BtnRecallInvoice_Click"
                Style="{StaticResource Settingsbtns}">
                <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Width="30"
                            Height="40"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Kind="InvoiceList"
                            Style="{StaticResource menuButtonIcon}" />
                        <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Left" Text="Recall an" />
                            <TextBlock HorizontalAlignment="Left" Text="Invoice" />
                        </StackPanel>
                    </StackPanel>
                </Viewbox>
            </Button>

            <Button
                x:Name="BtnRecallHold"
                Grid.Row="1"
                Grid.Column="2"
                Margin="5"
                Click="BtnRecallHold_Click"
                Style="{StaticResource Settingsbtns}">
                <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Width="30"
                            Height="40"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Kind="InvoiceTextClock"
                            Style="{StaticResource menuButtonIcon}" />
                        <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Left" Text="Recall Hold" />
                            <TextBlock HorizontalAlignment="Left" Text="Invoice" />
                        </StackPanel>
                    </StackPanel>
                </Viewbox>
            </Button>

            <Button
                x:Name="BtnPrintLast"
                Grid.Row="1"
                Grid.Column="3"
                Margin="5"
                Click="BtnPrintLast_Click"
                Style="{StaticResource Settingsbtns}">
                <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Width="30"
                            Height="40"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Kind="PrinterPosSync"
                            Style="{StaticResource menuButtonIcon}" />
                        <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Left" Text="Print Last" />
                            <TextBlock HorizontalAlignment="Left" Text="Receipt" />
                        </StackPanel>
                    </StackPanel>
                </Viewbox>
            </Button>

            <Button
                x:Name="BtnSendtoKot"
                Grid.Row="1"
                Grid.Column="4"
                Margin="5"
                Click="BtnSendtoKot_Click"
                Style="{StaticResource Settingsbtns}">
                <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Width="30"
                            Height="40"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Kind="PrinterPosAlert"
                            Style="{StaticResource menuButtonIcon}" />
                        <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Left" Text="Send to" />
                            <TextBlock HorizontalAlignment="Left" Text="Kitchen" />
                        </StackPanel>
                    </StackPanel>
                </Viewbox>
            </Button>

            <Button
                x:Name="BtnHold"
                Grid.Row="1"
                Grid.Column="5"
                Click="BtnHold_Click"
                Style="{StaticResource Settingsbtns}">
                <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Width="30"
                            Height="40"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Kind="CarBrakeHold"
                            Style="{StaticResource menuButtonIcon}" />
                        <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Left" Text="Hold" />
                        </StackPanel>
                    </StackPanel>
                </Viewbox>
            </Button>

            <Button
                x:Name="BtnReprint"
                Grid.Row="1"
                Grid.Column="5"
                Click="BtnReprint_Click"
                Style="{StaticResource Settingsbtns}">
                <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <iconPacks:PackIconMaterial
                            Width="30"
                            Height="40"
                            Margin="20,0,0,0"
