<Window x:Class="Pospointe.PosMenu.FrmPrintprompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:Pospointe.PosMenu"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Title="FrmPrintprompt" Width="1920" Height="1080">
    
    <Grid  Background="#80000000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource BorderFillBrush}" Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="2" CornerRadius="30" />

        <Button Margin="40" Grid.Column="1" Grid.Row="1" x:Name="BtnNone" Style="{StaticResource Settingsbtns}" Click="BtnNone_Click" >
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterial Kind="Cancel"  Style="{StaticResource menuButtonIcon}"  VerticalAlignment="Center" Width="60" Height="60" Margin="60,0,0,0" />
                <TextBlock  Text="None" VerticalAlignment="Center" TextWrapping="Wrap" Width="150" Margin="40,0,0,0" />
            </StackPanel>
        </Button>

        <Button Margin="40" Grid.Column="2" Grid.Row="1" x:Name="BtnPrint" Style="{StaticResource Settingsbtns}" Click="BtnPrint_Click" >
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterial Kind="Printer"  Style="{StaticResource menuButtonIcon}"  VerticalAlignment="Center" Width="60" Height="60" Margin="60,0,0,0" />
                <TextBlock  Text="Print" VerticalAlignment="Center" TextWrapping="Wrap" Width="150" Margin="40,0,0,0" />
            </StackPanel>
        </Button>

        <Button Margin="40" Grid.Column="2" Grid.Row="2" x:Name="BtnBtnSms" Style="{StaticResource Settingsbtns}" Click="BtnSms_Click" >
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterial Kind="MessageProcessing"  Style="{StaticResource menuButtonIcon}"  VerticalAlignment="Center" Width="60" Height="60" Margin="60,0,0,0" />
                <TextBlock  Text="SMS" VerticalAlignment="Center" TextWrapping="Wrap" Width="150" Margin="40,0,0,0" />
            </StackPanel>
        </Button>

        <Button Margin="40" Grid.Column="1" Grid.Row="2" x:Name="BtnSmsPrint" Style="{StaticResource Settingsbtns}" Click="BtnSmsPrint_Click" >
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterial Kind="MessageAlert"  Style="{StaticResource menuButtonIcon}"  VerticalAlignment="Center" Width="60" Height="60" Margin="60,0,0,0" />
                <TextBlock  Text="SMS + Print" VerticalAlignment="Center" TextWrapping="Wrap" Width="150" Margin="40,0,0,0" />
            </StackPanel>
        </Button>
        
    </Grid>
</Window>
