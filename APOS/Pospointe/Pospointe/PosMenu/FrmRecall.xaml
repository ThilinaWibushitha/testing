<Window x:Class="Pospointe.PosMenu.FrmRecall"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:Pospointe.PosMenu"
        mc:Ignorable="d"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        Loaded="Window_Loaded"
        Title="FrmRecall" Width="1920" Height="1080">

    <Window.Resources>
        <!-- Card layout helpers -->
        <CornerRadius x:Key="CardRadius">18</CornerRadius>
        <Thickness x:Key="CardPadding">16</Thickness>

        <!-- Divider line -->
        <Style x:Key="Divider" TargetType="Rectangle">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Fill" Value="#22000000"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>

        <!-- Button text style (keeps your button templates) -->
        <Style x:Key="ToolbarButtonText" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="12,0,0,0"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <!-- DataGrid header/row polish (uses your existing brushes) -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource DataGridRowBackground}" />
            <Setter Property="Foreground" Value="{StaticResource DataGridTextBrush}" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="{DynamicResource DataGridBackground}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridRow">
                        <Border x:Name="RowBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="6"
                                Margin="4,3">
                            <DataGridCellsPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RowBorder" Property="Background" Value="{DynamicResource DataGridRowBackground}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="RowBorder" Property="Background" Value="#223A86FF"/>
                                <Setter Property="Foreground" Value="{DynamicResource DataGridTextBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Subtle drop shadow for the card -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="18" ShadowDepth="0" Opacity="0.25"/>
    </Window.Resources>

    <!-- Dimmed backdrop -->
    <Grid Background="#80000000">

        <!-- Outer grid for centering the card -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!-- Soft container behind everything for depth -->
        <Border CornerRadius="30"
                Background="{StaticResource BorderFillBrush}"
                Grid.Column="1" Grid.ColumnSpan="3"
                Grid.Row="1" Grid.RowSpan="3"/>

        <!-- Main card -->
        <Border Grid.Row="2" Grid.Column="2"
                Margin="0,0,25,0"
                Background="{StaticResource Appboarderfill}"
                CornerRadius="{StaticResource CardRadius}"
                BorderThickness="1"
                BorderBrush="#D3D3D3"
                Padding="{StaticResource CardPadding}"
                Effect="{StaticResource CardShadow}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Toolbar -->
                    <RowDefinition Height="Auto"/>
                    <!-- Divider -->
                    <RowDefinition Height="*"/>
                    <!-- DataGrid -->
                    <RowDefinition Height="Auto"/>
                    <!-- Status -->
                </Grid.RowDefinitions>

                <!-- Toolbar -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Title -->
                        <ColumnDefinition Width="12"/>
                        <!-- spacer -->
                        <ColumnDefinition Width="*"/>
                        <!-- Search -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Recall -->
                        <ColumnDefinition Width="8"/>
                        <!-- spacer -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Close -->
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="History" Width="26" Height="26" Margin="0,0,8,0"/>
                        <TextBlock x:Name="txtHeading"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Search -->
                    <TextBox Style="{StaticResource searchTextbox}"
                             Grid.Column="2"
                             x:Name="txtSearch"
                             Tag="Search by invoice #, phone, or name"
                             TextAlignment="Center"
                             Margin="0"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Stretch"
                             GotFocus="txtSearch_GotFocus"/>

                    <!-- Recall button -->
                    <Button Style="{StaticResource Settingsbtns}"
                            Grid.Column="3"
                            Click="SearchButton_Click"
                            MinWidth="140"
                            Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="TextBoxSearch"
                                                        Style="{StaticResource menuButtonIcon}"
                                                        VerticalAlignment="Center"
                                                        Width="22" Height="22"/>
                            <TextBlock Text="Recall" Style="{StaticResource ToolbarButtonText}"/>
                        </StackPanel>
                    </Button>

                    <!-- Close button -->
                    <Button x:Name="Btnclose"
                            Style="{StaticResource Settingsbtns}"
                            Grid.Column="5"
                            Click="Btnclose_Click"
                            MinWidth="140"
                            Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="CloseCircle"
                                                        Style="{StaticResource menuButtonIcon}"
                                                        VerticalAlignment="Center"
                                                        Width="22" Height="22"/>
                            <TextBlock Text="Close" Style="{StaticResource ToolbarButtonText}"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <Rectangle Grid.Row="1" Style="{StaticResource Divider}"/>

                <!-- DataGrid -->
                <DataGrid Grid.Row="2"
                          Name="dgInvoices"
                          AutoGenerateColumns="True"
                          AutoGeneratingColumn="DgInvoices_AutoGeneratingColumn"
                          Background="{DynamicResource DataGridBackground}"
                          Foreground="{DynamicResource DataGridTextBrush}"
                          RowBackground="{DynamicResource DataGridBackground}"
                          AlternatingRowBackground="{DynamicResource DataGridRowBackground}"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          ColumnHeaderHeight="42"
                          RowHeight="44"
                          BorderThickness="0"
                          HorizontalGridLinesBrush="Transparent"
                          VerticalGridLinesBrush="Transparent"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserResizeRows="False"
                          EnableRowVirtualization="True"
                          ScrollViewer.CanContentScroll="True"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          HeadersVisibility="Column"
                          SelectionUnit="FullRow"
                          MouseDoubleClick="DgInvoices_MouseDoubleClick">
                </DataGrid>


                <TextBlock Grid.Row="3"
                           Name="txtStatus"
                           Text="Loading..."
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="0,10,0,0"
                           Foreground="Gray"
                           Visibility="Collapsed"/>
            </Grid>
        </Border>

    </Grid>
</Window>
