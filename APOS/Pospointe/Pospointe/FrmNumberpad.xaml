<Window x:Class="Pospointe.FrmNumberpad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:Pospointe"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="1366" Height="768"
        Title="FrmNumberpad">


    <Grid Background="#80000000">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Row="1" Grid.Column="1" Background="{StaticResource Appboarderfill}" Padding="10" CornerRadius="10" />

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1.5*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource UiTextBlockStyle}" Text="Select Discount Method"  />
                <TextBlock x:Name="UserNameDisplay" Style="{StaticResource UiTextBlockStyle}"
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   TextAlignment="Center" />
            </StackPanel>
            

            <TextBox Grid.Row="2"  Style="{StaticResource searchTextbox}" x:Name="NumAmount"  
                     VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="50 0 50 0" 
                     TextAlignment="Center" IsReadOnly="False" TextChanged="PinDisplay_TextChanged" LostFocus="PinDisplay_LostFocus">
            </TextBox>

            <UniformGrid Grid.Row="3" Rows="4" Columns="3" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                <Button Content="1" Click="Btnin" Margin="5" Style="{StaticResource SecBtns}" />
                <Button Content="2" Click="Btnin" Margin="5" Style="{StaticResource SecBtns}" />
                <Button Content="3" Click="Btnin" Margin="5" Style="{StaticResource SecBtns}" />
                <Button Content="4" Click="Btnin" Margin="5" Style="{StaticResource SecBtns}"/>
                <Button Content="5" Click="Btnin" Margin="5" Style="{StaticResource SecBtns}"/>
                <Button Content="6" Click="Btnin" Margin="5" Style="{StaticResource SecBtns}"/>
                <Button Content="7" Click="Btnin" Margin="5" Style="{StaticResource SecBtns}"/>
                <Button Content="8" Click="Btnin" Margin="5" Style="{StaticResource SecBtns}"/>
                <Button Content="9" Click="Btnin" Margin="5" Style="{StaticResource SecBtns}"/>
                <Button Content="." Click="Btnin" Margin="5" Style="{StaticResource SecBtns}"/>
                <Button Content="0" Click="Btnin" Margin="5" Style="{StaticResource SecBtns}"/>

                <Button x:Name="BtnDelete" Style="{StaticResource SecBtns}" Click="BtnDelete_Click" Margin="5" >
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Style="{StaticResource menuButtonIcon}" Kind="ArrowLeft" Height="60" Width="30"  VerticalAlignment="Center" />

                    </StackPanel>
                </Button>
                

            </UniformGrid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Button Margin="100 5 10 5"  Grid.Column="0" Name="BtnDollar" Style="{StaticResource menuButtonSec3}" Background="{DynamicResource ButtonDefaultBackground}" Click="BtnDollar_Click">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconIonicons  Kind="LogoUsd"  VerticalAlignment="Center" Width="30" Height="30"  />
                    </StackPanel>
                </Button>

                <Button Margin="10 5 100 5"  Grid.Column="1" Name="BtnPercentage" Style="{StaticResource menuButtonSec3}" Background="{DynamicResource ButtonDefaultBackground}"  Click="BtnPercentage_Click">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Percent"  Style="{StaticResource menuButtonIcon3}"  VerticalAlignment="Center" Width="30" Height="30"  />
                    </StackPanel>
                </Button>

            </Grid>

            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                

                <Button Margin="15 0 15 10" Grid.Column="0" x:Name="BtnCancel" Style="{StaticResource menuButton}"  Click="BtnCancel_Click">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="AlertCircle"  Style="{StaticResource menuButtonIcon}"  VerticalAlignment="Center" Width="30" Height="30" Margin="30,0,0,0" />
                        <TextBlock  Text="Cancel" VerticalAlignment="Center" TextWrapping="Wrap" Width="100" Margin="30,0,0,0" />
                    </StackPanel>
                </Button>

                <Button Margin="15 0 15 10" Grid.Column="1" x:Name="Btnenter" Style="{StaticResource menuButton}"  Click="BtnEnter_Click">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="AlertCircle"  Style="{StaticResource menuButtonIcon}"  VerticalAlignment="Center" Width="30" Height="30" Margin="30,0,0,0" />
                        <TextBlock  Text="Enter" VerticalAlignment="Center" TextWrapping="Wrap" Width="100" Margin="30,0,0,0" />
                    </StackPanel>
                </Button>



            </Grid>

            




        </Grid>



        <StackPanel>
            
        </StackPanel>






        
    </Grid>
</Window>
