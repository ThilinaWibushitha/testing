<Window x:Class="Pospointe.Loyalty.FrmOfferSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pospointe.Loyalty"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        ResizeMode="NoResize"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Loaded="Window_Loaded"
        Title="FrmOfferSelect" Height="1080" Width="1920">
    
    <Grid Background="#E0000000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <Border Background="{StaticResource Appboarderfill}"
                    CornerRadius="20" HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Grid.Row="0" Grid.RowSpan="2">


                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>

                    <Button Background="Transparent" HorizontalAlignment="Right" Margin="40,40,40,40"  Grid.Row="0" Grid.Column="2" Click="BtnClose_Click" x:Name="BtnClose" Style="{StaticResource Settingsbtns}" >
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Foreground="Black" Kind="CloseCircle" Style="{StaticResource menuButtonIcon}"  VerticalAlignment="Center" Width="40" Height="40"  />

                        </StackPanel>
                    </Button>

                    <TextBlock Text="Select Offer" Style="{StaticResource Header1}" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" />

                    <ScrollViewer  Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <WrapPanel  x:Name="WrapPanelOffers" Orientation="Horizontal" />
                    </ScrollViewer>
                </Grid>
                
                
            </Border>

        </Grid>


        
        
        


        <TextBlock Text="LBL" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="TxtOffer" />
        <TextBlock Text="Points" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="TxtPoints" />

    </Grid>
</Window>
