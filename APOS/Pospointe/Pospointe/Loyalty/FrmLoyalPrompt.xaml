<Window x:Class="Pospointe.Loyalty.FrmLoyalPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pospointe.Loyalty"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"   
        Title="FrmLoyalPrompt" Width="1920" Height="1080">

    <Grid Background="#E0000000"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  
                        Background="{StaticResource Appboarderfill}" 
                        CornerRadius="20 20 0 0" />
                
                <TextBlock Grid.Column="0" Grid.ColumnSpan="2" 
                           Text="Customer Not Found" 
                           Style="{StaticResource Header1}" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"/>

                <Button Background="Transparent" HorizontalAlignment="Right" Margin="0,0,0,0"  Grid.Row="1" Grid.Column="2" Click="BtnCancel_Click" x:Name="BtnClose" Style="{StaticResource Settingsbtns}" >
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Foreground="Black" Kind="CloseCircle" Style="{StaticResource menuButtonIcon}"  VerticalAlignment="Center" Width="60" Height="60"  />

                    </StackPanel>
                </Button>
            </Grid>

            <!-- Body -->
            <Border Grid.Row="1" Grid.RowSpan="2"  
                    Background="{StaticResource Appboarderfill}" 
                    CornerRadius="0 0 20 20"  />

            <Grid Margin="15" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Button Grid.Column="0" Grid.Row="0" Margin="10" 
                        x:Name="BtnRetry" 
                        Style="{StaticResource Settingsbtns}" 
                        Click="BtnRetry_Click">
                    
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial 
                            Kind="AccountGroup"  
                            Style="{StaticResource menuButtonIcon}"  
                            VerticalAlignment="Center" 
                            Width="30" Height="40" 
                            Margin="20,0,0,0" />
                        <TextBlock Text="Try Again" 
                                   VerticalAlignment="Center" 
                                   TextWrapping="Wrap" 
                                   Width="150" 
                                   Margin="20,0,0,0" />
                    </StackPanel>
                </Button>



                <Button Grid.Column="1" Grid.Row="0" Margin="10" 
                        x:Name="BtnUnverfied" 
                        Style="{StaticResource Settingsbtns}" 
                        Click="BtnUnverfied_Click">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial 
                            Kind="AccountCircle"  
                            Style="{StaticResource menuButtonIcon}"  
                            VerticalAlignment="Center" 
                            Width="30" Height="40" 
                            Margin="20,0,0,0" />
                        <TextBlock Text="Continue Without Verification" 
                                   VerticalAlignment="Center" 
                                   TextWrapping="Wrap"  
                                   Margin="20,0,0,0" />
                    </StackPanel>
                </Button>

            </Grid>
        </Grid>
    </Grid>
</Window>
