<Window x:Class="Pospointe.Customer_Manage.FrmAddCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pospointe.Customer_Manage"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="FrmAddCustomer" Width="1920" Height="1080">

    <Viewbox>
        <Grid Width="1920" Height="1080">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="2" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Label x:Name="LblPhoneNumber" Grid.Column="0" Grid.Row="1" Content="Phone Number *" Margin="10"/>
                <TextBox x:Name="TxtPhoneNumber" Grid.Column="1" Grid.Row="1" Margin="10"/>

                <Label x:Name="LblFirstName" Grid.Column="0" Grid.Row="2" Content="First Name *" Margin="10"/>
                <TextBox x:Name="TxtFirstName" Grid.Column="1" Grid.Row="2" Margin="10"/>

                <Label x:Name="LblLastName" Content="Last Name *" Grid.Column="0" Grid.Row="3" Margin="10"/>
                <TextBox x:Name="TxtLastname" Grid.Column="1" Grid.Row="3" Margin="10"/>

                <Label Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="4" Content="(Optional)" Margin="10"/>

                <Label x:Name="LblBusinessname" Content="Business Name" Grid.Column="0" Grid.Row="5" Margin="10"/>
                <TextBox x:Name="TxtBusinessname" Grid.Column="1" Grid.Row="5" Margin="10"/>

                <Label x:Name="LblEmail" Content="Email" Grid.Column="0" Grid.Row="6" Margin="10"/>
                <TextBox x:Name="TxtEmail" Grid.Column="1" Grid.Row="6" Margin="10"/>

                <Label x:Name="LblAddress" Content="Address" Grid.Column="0" Grid.Row="7" Margin="10"/>
                <TextBox x:Name="TxtAddress" Grid.Column="1" Grid.Row="7" Margin="10"/>

                <Label x:Name="LblZip" Content="Zip" Grid.Column="0" Grid.Row="8" Margin="10"/>
                <TextBox x:Name="TxtZip" Grid.Column="1" Grid.Row="8" Margin="10"/>

                <Label x:Name="LblTaxex" Content="Tax Exempt" Grid.Column="0" Grid.Row="9" Margin="10"/>
                <CheckBox x:Name="ChkTaxexempt" Grid.Column="1" Grid.Row="9" Margin="10" VerticalAlignment="Center"/>

                <Button Style="{StaticResource menuButton}" x:Name="BtnAddCustomer" Grid.Column="0" Grid.Row="10" Margin="10">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="Menu" VerticalAlignment="Center" Width="24" Height="24" Margin="30,0,8,0" />
                        <TextBlock Text="Add Customer" VerticalAlignment="Center" TextWrapping="Wrap"  />
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SecBtns}" x:Name="BtnCancel" Grid.Column="1" Grid.Row="10" Margin="10">
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="10" Source="https://fileserver.asnit.us/UploadedFiles/Pospointe/478b4fba-3aa5-468f-9349-4e98f9438430.png" />
                        <TextBlock Text="Cancel" VerticalAlignment="Center" TextWrapping="Wrap" Width="100" />
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Viewbox>
</Window>