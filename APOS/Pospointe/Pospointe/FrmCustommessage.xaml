<Window x:Class="Pospointe.FrmCustommessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowState="Maximized"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        Title="FrmCustommessage" Width="1920" Height="1080">


    <Grid>
        <Border Background="#80000000" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Border.Effect>
                <BlurEffect Radius="20" />
            </Border.Effect>
        </Border>

        <Border x:Name="MessageBorder" Padding="20" CornerRadius="25"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="{StaticResource BackgroundBrush}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="Black" Opacity="0.5" />
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>


                <Border Grid.Row="1" x:Name="HeaderBorder" Background="{StaticResource Appboarderfill}" Padding="15" CornerRadius="15" Margin="15">
                    <TextBlock x:Name="LblHeader" Text="Alert" HorizontalAlignment="Center"
                           FontSize="24" FontWeight="Bold" Style="{StaticResource Header1}" />
                </Border>

            
                <UniformGrid Height="300" Width="800" Grid.Row="2" Rows="2" Margin="15"
                             HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock x:Name="LblMessage" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Center"
           TextAlignment="Center"  
           TextWrapping="Wrap" 
           FontSize="20"
           Style="{StaticResource Header2}"
           Width="600" 
           Text="CUS MSG" />


                    <Button x:Name="BtnYes" Click="BtnYes_Click"
        HorizontalAlignment="Center" VerticalAlignment="Center"
        Width="180" Height="40" FontSize="16" FontWeight="Bold"
        BorderThickness="0" Background="{StaticResource ButtonBrush}" 
        Foreground="{StaticResource Buttonfont}" FontFamily="Tahoma">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="15">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#4A4A4A" />
                                                    <Setter Property="Foreground" Value="White" />
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#5A5A5A" />
                                                    <Setter Property="Foreground" Value="White" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock x:Name="BtnTextBlock" Text="Okay" Margin="0,0,5,0" VerticalAlignment="Center" />
                            <TextBlock x:Name="CountdownTextBlock" Text="(15)" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>


                </UniformGrid>
            </Grid>
        </Border>
    </Grid>
</Window>
