<Window x:Class="Pospointe.MainMenu.FrmOnlineOrderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Online Order Details" Height="700" Width="1000" 
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource Appboarderfill}" Padding="15" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,15,0">
                    <TextBlock x:Name="TxtPlatform" Text="ONLINE ORDER" Style="{StaticResource Header1}"/>

                    <TextBlock x:Name="TxtCustomerName" Style="{StaticResource Header2}" 
                       Margin="0,5,0,0"/>

                    <TextBlock x:Name="TxtOrderNum" Text="OrderNumber" Style="{StaticResource Header3}"
                       Margin="0,5,0,0"/>

                    <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                        <TextBlock x:Name="TxtItemCount" Text="Total Items" FontSize="14" FontWeight="SemiBold" 
                           Foreground="#FF444444" VerticalAlignment="Center"/>

                        <TextBlock x:Name="TxtDate" Text="Date" FontSize="13" 
                           Foreground="#FF666666" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <Image x:Name="ImgPlatformLogo" Width="80" Height="80" 
               Grid.Column="1" VerticalAlignment="Center"/>
            </Grid>

        </Border>

        <Border Grid.Row="1" Background="White" CornerRadius="5" Padding="0"
                BorderThickness="1" BorderBrush="#FFE0E0E0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                <StackPanel x:Name="ItemsPanel"/>
            </ScrollViewer>
        </Border>

        <Border Grid.Row="2" Background="#FFF0F8FF" CornerRadius="5" Padding="15" 
                Margin="0,10,0,10" BorderThickness="1" BorderBrush="#FFADD8E6"
               >
            <StackPanel>
                <TextBlock Text="Order Notes" FontSize="14" FontWeight="SemiBold" 
                           Foreground="#FF0066CC" Margin="0,0,0,5"/>
                <TextBlock x:Name="TxtOrderNote" FontSize="13" Foreground="#FF333333" 
                           TextWrapping="Wrap" TextAlignment="Left"/>
            </StackPanel>
        </Border>
        
        <Border Grid.Row="3" Background="White" CornerRadius="5" Padding="15"
                BorderThickness="1" BorderBrush="#FFE0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center">

                    <Grid Margin="0,2,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Sub Total:" Grid.Column="0" FontSize="15"/>
                        <TextBlock x:Name="TxtSubTotal" Grid.Column="1" FontSize="15"
                   HorizontalAlignment="Right" Margin="20,0,0,0"/>
                    </Grid>

                    <Grid Margin="0,2,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Tax Total:" Grid.Column="0" FontSize="15"/>
                        <TextBlock x:Name="TxtTaxTotal" Grid.Column="1" FontSize="15"
                   HorizontalAlignment="Right" Margin="20,0,0,0"/>
                    </Grid>

                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Grand Total:" Grid.Column="0" FontSize="17" FontWeight="Bold"/>
                        <TextBlock x:Name="TxtGrandTotal" Grid.Column="1" FontSize="17" FontWeight="Bold"
                   HorizontalAlignment="Right" Margin="20,0,0,0"/>
                    </Grid>

                </StackPanel>
                




                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BtnPrint" Content="Print" Width="100" Height="35" Margin="5,0" Click="BtnPrint_Click"
                            Background="White" BorderBrush="#FFDDDDDD" Foreground="#FF333333"/>
                    <Button x:Name="BtnCancel" Content="Cancel Order" Width="120" Height="35" Margin="5,0" Click="BtnCancel_Click"
                            Background="#FFFFEBEE" BorderBrush="#FFFFCDD2" Foreground="#FFD32F2F"/>
                    
                    <Button x:Name="BtnOk" Content="OK" Width="80" Height="35" Margin="5,0" 
                            Visibility="Collapsed" Background="#FF2196F3" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>