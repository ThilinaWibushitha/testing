<Window x:Class="Pospointe.MainMenu.FrmQuickdash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pospointe.MainMenu"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        WindowState="Maximized"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        Title="Quick Dashboard" Height="450" Width="800" Background="{StaticResource Appboarderfill}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <DockPanel  Grid.Row="0" Height="50" VerticalAlignment="Top">
            <TextBlock Text="Quick Dashboard" 
                       Foreground="Black" 
                       FontWeight="Bold" 
                       
                       FontSize="16" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" 
                       Margin="10,0"/>
            <Button Content="Exit" 
                    x:Name="BtnExit" 
                    Click="BtnExit_Click" 
                    Width="80" 
                    Height="30" 
                    Margin="0,10,10,10" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    Style="{StaticResource  btnToolbox}"
                    DockPanel.Dock="Right" />
        </DockPanel>

        <Border Grid.Row="1" Margin="10" CornerRadius="20" Background="#FFFFFF" >
            <wv2:WebView2 Margin="10" x:Name="Webview" />
        </Border>
    </Grid>
</Window>
