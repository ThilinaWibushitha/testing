<Window x:Class="Pospointe.MainMenu.FrmonlineOrders"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        WindowState="Maximized"
        Loaded="Window_Loaded"
        WindowStyle="None"
        Title="Online Orders"
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        Background="White">
    
    

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Column="0" Background="#f8f8f8" VerticalAlignment="Stretch">
            <Grid VerticalAlignment="Center">
                <StackPanel>

                    <Button x:Name="BtnHome" Style="{StaticResource Settingsbtns3}" Height="70" Margin="20" Click="BtnHome_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBlock Text="POS" HorizontalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnAllOrders" Style="{StaticResource btnItems}" Height="100" Margin="10" Click="BtnAllOrders_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="https://i.postimg.cc/j2dsTKGq/Untitled-design.png" Width="40" Height="40"/>
                            <TextBlock Text="All Orders" HorizontalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnCartpointe" Style="{StaticResource btnItems}" Height="100" Margin="10" Click="BtnCartpointe_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="https://pospointe.com/wp-content/uploads/2023/04/POS_POINTE-1.png" Width="40" Height="40"/>
                            <TextBlock Text="CartPointe" HorizontalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnUbereats" Style="{StaticResource btnItems}" Height="100" Margin="10" Click="BtnUbereats_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="https://fileserver.asnit.us/UploadedFiles/Pospointe/dbfc8791-43d7-4866-817c-f68d5494fbe4.png" Width="40" Height="40"/>
                            <TextBlock Text="Uber Eats" HorizontalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnDoorDash" Style="{StaticResource btnItems}" Height="100" Margin="10" Click="BtnDoorDash_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="https://www.pngall.com/wp-content/uploads/15/Door-Dash-Logo-PNG-Images.png" Width="40" Height="40"/>
                            <TextBlock Text="DoorDash" HorizontalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>



                    <Button x:Name="BtnGrubHub" Style="{StaticResource btnItems}" Height="100" Margin="10" Click="BtnGrubHub_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="https://fileserver.asnit.us/UploadedFiles/Pospointe/a1190e56-a6bf-4ec1-9909-2f96be0efa94.png" Width="40" Height="40"/>
                            <TextBlock Text="GrubHub" HorizontalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnManageStore" Style="{StaticResource btnItems}" Height="100" Margin="10" Click="BtnManageStore_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Image Source="https://fileserver.asnit.us/UploadedFiles/Pospointe/a1190e56-a6bf-4ec1-9909-2f96be0efa94.png" Width="40" Height="40"/>
                            <TextBlock Text="Manage Stores Status" HorizontalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </Grid>
        </StackPanel>



        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid x:Name="LoadingOverlay" Background="#80000000" Visibility="Collapsed" Grid.RowSpan="3" Grid.ColumnSpan="2">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
                    <TextBlock Text="Please wait..." Foreground="White" FontSize="14" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>


            <TextBlock Text="All Orders"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0 10"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10">
                <TextBox Width="500" Height="30" Margin="0 0 10 0" />
                <Button Content="Search" Background="Red" Foreground="White" Width="80" Height="30"/>
            </StackPanel>


            <Border Grid.Row="2" BorderThickness="1" BorderBrush="#E0E0E0" CornerRadius="4" Background="White">
                <DataGrid x:Name="OrdersGrid" 
                          Style="{StaticResource DataGridStyle}"
                          RowHeight="{x:Static sys:Double.NaN}"                          
                          ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Provider" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding ProviderLogo}" Width="50" Height="50" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Customer" Binding="{Binding CustomerFirstName}" 
                                            
                                            Width="*" ElementStyle="{StaticResource CenterCellStyle}"/>
                        
                        <DataGridTextColumn Header="Order ID" Binding="{Binding OrderShortId}" 
                                            Width="*" ElementStyle="{StaticResource CenterCellStyle}"/>
                        
                        <DataGridTextColumn Header="Placed" Binding="{Binding DateTime}" 
                                            Width="*" ElementStyle="{StaticResource CenterCellStyle}"/>
                        
                        <!--<DataGridTextColumn Header="Sub Total" Binding="{Binding SubTotal}" 
                                            Width="1*" ElementStyle="{StaticResource CenterCellStyle}"/>
                        
                        <DataGridTextColumn Header="Tax" Binding="{Binding Tax}" 
                                            Width="*" ElementStyle="{StaticResource CenterCellStyle}"/>-->
                        
                        <DataGridTextColumn Header="Grand Total" Binding="{Binding GrandTotal}" 
                                            Width="*" ElementStyle="{StaticResource CenterCellStyle}"/>

                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" 
                                            Width="*" ElementStyle="{StaticResource CenterCellStyle}"/>


                        <DataGridTemplateColumn Header="Action" Width="450">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel x:Name="Actionbtn" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,2,0,2">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,2">
                                            
                                            <Button  Style="{StaticResource ActionButton}" ToolTip="View Details" Width="130" Height="50 " Click="BtnDetails_Click">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <iconPacks:PackIconMaterial Margin="0,0,10,0" HorizontalAlignment="Left" Kind="InformationOutline" Width="18" Height="18" Foreground="DodgerBlue"/>
                                                    <TextBlock Text="Details" FontSize="10" HorizontalAlignment="Right" Style="{StaticResource Header1}"/>
                                                </StackPanel>
                                            </Button>

                                            <Button  Style="{StaticResource ActionButton}" ToolTip="Print Order" Click="BtnPrint_Click" Margin="5,0,0,0"  Width="130" Height="50">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <iconPacks:PackIconMaterial Margin="0,0,10,0" HorizontalAlignment="Left" Kind="Printer" Width="18" Height="18" Foreground="Green"/>
                                                    <TextBlock Text="Print" FontSize="10" HorizontalAlignment="Right"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,2">
                                            <Button x:Name="BtnCancel"  ToolTip="Cancel Order" Click="BtnCancel_Click"  Width="130" Height="50" Background="#b80000" Foreground="White" >
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <!-- Hide if status is Completed -->
                                                            <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>

                                                            <!-- Hide if status is Cancelled -->
                                                            <DataTrigger Binding="{Binding Status}" Value="CANCELED">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <iconPacks:PackIconMaterial Margin="0,0,10,0" HorizontalAlignment="Left"
                                                                                Kind="CloseCircleOutline" Width="18" Height="18" Foreground="Red"/>
                                                    <TextBlock Text="Cancel" FontSize="10" HorizontalAlignment="Right"/>
                                                </StackPanel>
                                            </Button>



                                            <Button ToolTip="Mark as Ready" Click="BtnMarkasReady_Click" Margin="5,0,0,0"  Width="130" Height="50" Background="#187498" Foreground="White" >
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <!-- Hide if already Ready for Pickup -->
                                                            <DataTrigger Binding="{Binding Status}" Value="READY FOR PICKUP">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                            <!-- Hide if already Completed -->
                                                            <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                            <!-- Hide if Cancelled -->
                                                            <DataTrigger Binding="{Binding Status}" Value="CANCELED">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>

                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <iconPacks:PackIconMaterial Margin="0,0,10,0" HorizontalAlignment="Left" Kind="ClockCheckOutline" FontWeight="Bold" Width="18" Height="18" Foreground="White"/>
                                                    <TextBlock Text="Ready" FontSize="10" HorizontalAlignment="Right"/>
                                                </StackPanel>
                                            </Button>

                                            <Button Height="50" Background="#29AF34"  Width="130" x:Name="BtnMarkCompleted" ToolTip="Mark as Completed" Click="BtnMarkCompleted_Click" Margin="5,0,0,0">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <!-- Hide if already Completed -->
                                                            <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                            
                                                            <!-- Hide if Cancelled -->
                                                            <DataTrigger Binding="{Binding Status}" Value="CANCELED">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <iconPacks:PackIconMaterial Margin="0,0,10,0" HorizontalAlignment="Left" Kind="CheckCircleOutline" Width="18" Height="18" Foreground="ForestGreen"/>
                                                    <TextBlock Text="Completed" FontSize="10" HorizontalAlignment="Right"/>
                                                </StackPanel>
                                            </Button>



                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Grid x:Name="FullScreenOverlay" Background="#AA000000" Visibility="Collapsed" Grid.RowSpan="3" Panel.ZIndex="999">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
                    <ProgressBar IsIndeterminate="True" Width="250" Height="25" Foreground="#b80000"/>
                    <TextBlock x:Name="OverlayMessage" Text="Processing..." Foreground="White" FontSize="20" FontWeight="Bold" TextAlignment="Center"/>
                </StackPanel>
            </Grid>


        </Grid>
    </Grid>
</Window>
