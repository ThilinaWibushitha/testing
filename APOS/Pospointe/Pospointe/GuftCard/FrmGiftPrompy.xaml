<Window x:Class="Pospointe.GuftCard.FrmGiftPrompy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:Pospointe.GuftCard"
        Background="Transparent"
        AllowsTransparency="True"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowState="Maximized"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="FrmGiftPrompy" Width="1920" Height="1080">
    <Grid Background="#80000000" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        
        
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Border Background="{StaticResource Appboarderfill}" CornerRadius="25" Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="2">
            
        </Border>

        <Button Margin="40" Grid.Row="1" Grid.Column="1" x:Name="BtnQR" Style="{StaticResource Settingsbtns}" Click="BtnQR_Click" >
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterial Kind="Qrcode"  Style="{StaticResource menuButtonIcon}"  VerticalAlignment="Center" Width="60" Height="60" Margin="60,0,0,0" />
                <TextBlock  Text="QR" VerticalAlignment="Center" TextWrapping="Wrap" Width="150" Margin="40,0,0,0" />
            </StackPanel>
        </Button>

        <Button Margin="40" Grid.Row="1" Grid.Column="2" Click="BtnCard_Click" x:Name="BtnCard" Style="{StaticResource Settingsbtns}" >
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterial Kind="WalletGiftcard"  Style="{StaticResource menuButtonIcon}"  VerticalAlignment="Center" Width="60" Height="60" Margin="60,0,0,0" />
                <TextBlock  Text="Gift Card" VerticalAlignment="Center" TextWrapping="Wrap" Width="150" Margin="40,0,0,0" />
            </StackPanel>
        </Button>

        <Button Margin="40"  Grid.Row="2" Grid.Column="2" Click="BtnClose_Click" x:Name="BtnClose" Style="{StaticResource Settingsbtns}" >
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterial Kind="CloseCircle"  Style="{StaticResource menuButtonIcon}"  VerticalAlignment="Center" Width="60" Height="60" Margin="60,0,0,0" />
                <TextBlock  Text="Close" VerticalAlignment="Center" TextWrapping="Wrap" Width="150" Margin="40,0,0,0" />
            </StackPanel>
        </Button>

    </Grid>
</Window>
