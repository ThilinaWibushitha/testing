<Window x:Class="Pospointe.GuftCard.FrmBalanceCheck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowState="Maximized"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        Title="Card Details" Height="768" Width="1366">

    <Grid Background="#CC000000">
        <Border Width="600" Height="380" CornerRadius="15" Background="{StaticResource BackgroundBrush}" 
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Height="35" Background="{StaticResource Appboarderfill}"  CornerRadius="3" Margin="0 0 0 20"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel>
                       
                        <TextBlock x:Name="TxtCardNumber" Text="XXXX-XXXX-XXXX-XXXX"  Style="{StaticResource Body2}"
                                   FontFamily="Consolas" FontSize="18" FontWeight="Bold"
                                    Margin="0 0 0 15"/>

                        <!-- Dates Section -->
                        <Grid Margin="0 0 0 15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="Created" Style="{StaticResource Body2}" FontSize="12"/>
                                <TextBlock x:Name="TxtCreatedDate" Text="01/24" 
                                           Style="{StaticResource Body2}" FontSize="14" FontWeight="SemiBold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="30 0 0 0">
                                <TextBlock Text="Expires" Style="{StaticResource Body2}" FontSize="12"/>
                                <TextBlock x:Name="TxtExpDate" Text="12/27" 
                                           Style="{StaticResource Body2}" FontSize="14" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>
                        
                        <StackPanel Margin="0 0 0 15">
                            <TextBlock Text="Last Used" Style="{StaticResource Body2}" FontSize="12"/>
                            <TextBlock x:Name="TxtLastUsedDate" Text="15 Jun 2024" 
                                       Style="{StaticResource Body2}" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>

                    
                    <StackPanel Grid.Column="1" Width="120">
                        <Border Background="{StaticResource Appboarderfill}" CornerRadius="5" Padding="10" Margin="0 15 0 0">
                            <StackPanel>
                                <TextBlock  Text="Balance" Style="{StaticResource Body2}" FontSize="12"/>
                                <TextBlock x:Name="TxtBalance" Text="$24.00" FontSize="16" 
                                           FontWeight="Bold" Style="{StaticResource Body2}" Margin="0 3 0 0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Footer Section -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status -->
                    <TextBlock x:Name="TxtStatus" Text="Active" Foreground="#4CAF50" 
                               FontSize="14" VerticalAlignment="Center"/>

                    <!-- Close Button -->
                    <Button x:Name="BtnClose" Style="{StaticResource SecBtns11}" Grid.Column="1" Content="CLOSE" 
                            Width="100" Padding="8" 
                            Foreground="White" BorderThickness="0" FontWeight="SemiBold"
                            Click="BtnClose_Click"/>
                </Grid>

            </Grid>
        </Border>
    </Grid>
</Window>