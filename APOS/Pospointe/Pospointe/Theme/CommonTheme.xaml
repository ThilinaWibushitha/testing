
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
                    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--******************************* used backgrounds ****************************************-->
    <Color x:Key="BackgroundColor">#000000</Color>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />

    <Color x:Key="BorderFillColor">#121212</Color>
    <SolidColorBrush x:Key="BorderFillBrush" Color="{StaticResource BorderFillColor}" />

    <Color x:Key="Appboarderfills">#45484D</Color>
    <SolidColorBrush x:Key="Appboarderfill" Color="{StaticResource Appboarderfills}" />

    <!--***********************************************************************-->

    <!--******************************* TextBlock ****************************************-->

    <Style x:Key="BaseHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI Variable"/>
        <Setter Property="Foreground" Value="#333333"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <Style x:Key="Header1" TargetType="TextBlock" BasedOn="{StaticResource BaseHeaderStyle}">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="Header2" TargetType="TextBlock" BasedOn="{StaticResource BaseHeaderStyle}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="Header3" TargetType="TextBlock" BasedOn="{StaticResource BaseHeaderStyle}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="body1" TargetType="TextBlock" BasedOn="{StaticResource BaseHeaderStyle}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

    <!--***********************************************************************-->



    <!--******************************* Btns ****************************************-->

    <!--Login_Users-->
    
    <Style x:Key="StyledUser" TargetType="Button">
        <Setter Property="Background" Value="#BDB9B7" />
        <Setter Property="Foreground" Value="#1D1E27" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontFamily" Value="Segoe UI Variable" />
        <Setter Property="FontWeight" Value="Bold" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="30">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#45484D" />
                            <Setter Property="Opacity" Value="0.8" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--PinPadNumber-->

    <Style x:Key="PinpadNumberpad" TargetType="Button">
        <Setter Property="Background" Value="#BDB9B7" />
        <Setter Property="Foreground" Value="#1D1E27" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="FontSize" Value="25" />
        <Setter Property="FontFamily" Value="Segoe UI Variable" />
        <Setter Property="FontWeight" Value="Bold" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="20">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#45484D"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--BtnWithoutText-->

    <Style x:Key="IconOnlyButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#A50113" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Margin" Value="20" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Height" Value="80" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="30">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#45484D"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    
    


    <!--******************************* Icons STYLES Matrial ****************************************-->

    <!-- Icons STYLES -->

    <Style x:Key="IconOnlyButtonIconStyle" TargetType="iconPacks:PackIconMaterial">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Width" Value="40" />
        <Setter Property="Height" Value="35" />
        <Setter Property="Foreground" Value="#FFFBF2" />
    </Style>





</ResourceDictionary>