<Window x:Class="Pospointe.FrmTroubleshooter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pospointe"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowState="Maximized"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Title="FrmTroubleshooter" Height="768" Width="1366">


    
    
    
    <Grid Background="#80000000" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <!-- Main Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="1" Grid.Column="1"
        CornerRadius="10"
        Background="{StaticResource BorderFillBrush}"
        Padding="20"/>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Troubleshooting" Style="{StaticResource Header1}" 
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <TextBlock Grid.Row="1" Text="We're diagnosing an issue with the credit card terminal" Style="{StaticResource Header1}" 
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <TextBlock Grid.Row="2" Text="Scanning For Pax Devices" Style="{StaticResource Header1}" 
            HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <TextBlock Grid.Row="3" Text="This may take a moment while we fix the problem." Style="{StaticResource Header1}"  TextWrapping="Wrap"
HorizontalAlignment="Center" VerticalAlignment="Center"/>


        </Grid>



    </Grid>
</Window>
