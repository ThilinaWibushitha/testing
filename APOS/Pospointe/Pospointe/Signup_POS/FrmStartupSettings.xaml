<Window x:Class="Pospointe.Signup_POS.FrmStartupSettings"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:Pospointe.Signup_POS"
        WindowState="Maximized"
        WindowStyle="None"
        mc:Ignorable="d"
        Title="FrmStartupSettings" Height="1080" Width="1920"
        Background="#0D0D0D">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content -->
        <StackPanel x:Name="MainPanel" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="1000">
            <!-- Welcome Message -->
            <TextBlock x:Name="WelcomeText" FontSize="28" FontWeight="Bold" Foreground="#E63946" HorizontalAlignment="Center" Margin="0,0,0,20"
                       Text="Welcome to POSPointe Setup" TextAlignment="Center" FontFamily="Segoe UI Light"/>

            <!-- Status Text -->
            <TextBlock x:Name="StatusTextBlock" FontSize="20" FontWeight="SemiBold" Foreground="#B0B0B0" HorizontalAlignment="Center" Margin="0,0,0,20"
                       Text="Initializing setup..." TextAlignment="Center" FontFamily="Segoe UI"/>

            <!-- Animated GIF -->
            <Image x:Name="LoadingGif" Height="200" Width="200" gif:ImageBehavior.AnimatedSource="/Asset/pos1.gif" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Finish Button (Hidden by Default) -->
            <Button x:Name="BtnFinishSetup" Height="70" Width="300" Style="{StaticResource Settingsbtns}" HorizontalAlignment="Center" Margin="0,20,0,0"
                    Click="BtnFinishSetup_Click" Visibility="Collapsed">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Play" Style="{StaticResource menuButtonIcon}" VerticalAlignment="Center" Width="30" Height="40" Margin="20,0,0,0"/>
                    <TextBlock Text="Get Started" VerticalAlignment="Center" TextWrapping="Wrap" Width="120" Margin="20,0,0,0" Foreground="#E0E0E0" FontFamily="Segoe UI"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>