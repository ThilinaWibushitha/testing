<Window x:Class="Pospointe.Signup_POS.FrmGetsupport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        Height="700" Width="1000"
        Loaded="Window_Loaded"
        Title="FrmGetsupport">

    <Grid Background="#80000000">

        <Grid Grid.Row="1" Grid.Column="1" Margin="48">
            <Border Background="{StaticResource BackgroundBrush}"
                    Height="600"
                    Width="1000"
                    CornerRadius="20"
                    Padding="20"
                    SnapsToDevicePixels="True">
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBlock Text="Get Support"
                                   Style="{StaticResource Header2}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,8"/>
                        
                        <Button x:Name="BtnCancel"
                                Background="Transparent"
                                Style="{StaticResource Icobtn}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Click="BtnCancel_Click">
                            
                            <iconPacks:PackIconFontAwesome
                                Style="{StaticResource Icobtnico}"
                                Kind="CircleXmarkSolid"
                                Height="36" Width="36"
                                VerticalAlignment="Center"
                                Foreground="#1D1E27"/>
                        </Button>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="300"/>
                            <ColumnDefinition Width="6"/>
                            <ColumnDefinition Width="*" MinWidth="300"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="8" VerticalAlignment="Center">
                            
                            <TextBlock Text="ASNIT SUPPORT"
                                       Style="{StaticResource Header2}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,16"/>
                            
                            <WrapPanel HorizontalAlignment="Center" ItemWidth="220" ItemHeight="210">
                                <StackPanel Margin="6" Width="220">
                                    <Border CornerRadius="16" Height="150" Background="#f8f8f8"
                                            Cursor="Hand" MouseLeftButtonUp="BtnInstall_Click">
                                        <Image Source="/Asset/asnit.png" Stretch="Uniform" Margin="10"/>
                                    </Border>
                                    <TextBlock Text="ASNIT SUPPORT" Style="{StaticResource Header3}"
                                               HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                    <TextBlock x:Name="AnyDeskStatus1" Text="Available"
                                               FontSize="14" Foreground="LightGreen"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                            </WrapPanel>
                        </StackPanel>

                        <GridSplitter Grid.Column="1"
                                      Width="6"
                                      HorizontalAlignment="Stretch"
                                      Background="#22000000"
                                      ShowsPreview="True"
                                      ResizeBehavior="PreviousAndNext"
                                      ResizeDirection="Columns"/>

                        <StackPanel Grid.Column="2" Margin="8" VerticalAlignment="Center">
                            <TextBlock Text="3rd Party"
                                       Style="{StaticResource Header2}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,16"/>
                            <WrapPanel HorizontalAlignment="Center" ItemWidth="220" ItemHeight="210">
                                <StackPanel Margin="6" Width="220">
                                    <Border CornerRadius="16" Height="150" Background="#f8f8f8"
                                            Cursor="Hand" MouseLeftButtonUp="AnyDesk_Click">
                                        <Image Source="/Asset/anyde.png" Stretch="Uniform" Margin="10"/>
                                    </Border>
                                    <TextBlock Text="AnyDesk" Style="{StaticResource Header3}"
                                               HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                    <TextBlock x:Name="AnyDeskStatus" Text="Available"
                                               FontSize="14" Foreground="LightGreen"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Margin="6" Width="220">
                                    <Border CornerRadius="16" Height="150" Background="#f8f8f8"
                                            Cursor="Hand" MouseLeftButtonUp="RustDesk_Click">
                                        <Image Source="/Asset/rust.png" Stretch="Uniform" Margin="10"/>
                                    </Border>
                                    <TextBlock Text="RustDesk" Style="{StaticResource Header3}"
                                               HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                    <TextBlock x:Name="RustDeskStatus" Text="Not Available"
                                               FontSize="14" Foreground="Red"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </WrapPanel>
                        </StackPanel>
                    </Grid>


                    <!--<Grid Grid.Row="2" Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock x:Name="Txtc" Text="Your Support ID:" FontWeight="SemiBold"/>
                                <TextBlock x:Name="TxtCode" Text="Code here"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" >
                                <TextBlock x:Name="TxtPAssword" Text="Your PIN:" FontWeight="SemiBold"/>
                                <TextBlock x:Name="TxtPIN" Text="PIN"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Grid.Column="1" x:Name="BtnInstall"
                                Content="Install now"
                                Padding="16,8"
                                Margin="12,0,0,0"
                                Click="BtnInstall_Click"/>
                    </Grid>-->

                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
