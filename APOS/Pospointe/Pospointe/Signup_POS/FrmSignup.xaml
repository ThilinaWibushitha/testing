<Window x:Class="Pospointe.Signup_POS.FrmSignup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pospointe.Signup_POS"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        Loaded="Window_Loaded"
        Background="#131313"
        Title="FrmSignup" Height="768" Width="1366">

    <Grid >

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="7*" />
            <RowDefinition Height="1*" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" x:Name="NetworkStatusText"
   Text="{Binding NetworkStatus}"
   FontSize="24"
   FontWeight="Bold"
   Foreground="White"
   HorizontalAlignment="Center"
   VerticalAlignment="Center"  
   Grid.ColumnSpan="2"
   Margin="0,20,0,20" />



        <TextBlock Text="Sign In Options" Grid.Row="1" Grid.ColumnSpan="2"
            FontSize="36" FontWeight="Bold" Foreground="White"
            HorizontalAlignment="Center" Margin="0,0,0,30" />




        --><!-- Sign In Online Section --><!--
        <Border Grid.Row="2" Grid.Column="0" Background="#2E2E2E" CornerRadius="15" Padding="30" Margin="20">
            <StackPanel>
                <TextBlock Text="Sign In Online" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20" />
                <TextBlock Text="Follow these steps to register your device online."
                           FontSize="16" Foreground="#B0B0B0" TextWrapping="Wrap" Margin="0,0,0,30" />
                <Border Background="#404040" CornerRadius="10" Padding="20" Margin="0,10,0,30">
                    <TextBlock x:Name="TxtCode" FontSize="48" FontWeight="Bold" Foreground="#B31B1B" TextAlignment="Center" />
                </Border>
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Step 1" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,5,0,10" />
                    <TextBlock Text="Go to Mypospointe.com/Code and sign in to your Mypospointe" FontSize="16" Foreground="#D3D3D3" TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Margin="0,30,0,0">
                    <TextBlock Text="Step 2" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,5,0,10" />
                    <TextBlock Text="Enter the activation code to register your device." FontSize="16" Foreground="#D3D3D3" TextWrapping="Wrap" />
                </StackPanel>
            </StackPanel>
        </Border>

        --><!-- Sign In with QR Code Section --><!--
        <Border Grid.Row="2" Grid.Column="1" Background="#2E2E2E" CornerRadius="15" Padding="30" Margin="20">
            <StackPanel>
                <TextBlock Text="Sign In with QR Code" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20" />
                <TextBlock Text="Scan the QR code below using your mobile device camera or QR code reader."
                           FontSize="16" Foreground="#B0B0B0" TextWrapping="Wrap" Margin="0,0,0,30" />
                <Border Background="White" CornerRadius="10" Padding="10" HorizontalAlignment="Center" Margin="0,10,0,30">
                    <Image x:Name="QrCodeImage" Height="200" Width="200" Stretch="Uniform" />
                </Border>
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Step 1" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,5,0,10" />
                    <TextBlock Text="Open your camera app and scan the QR code." FontSize="16" Foreground="#D3D3D3" TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Margin="0,30,0,0">
                    <TextBlock Text="Step 2" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,5,0,10" />
                    <TextBlock Text="Sign in to your MYPospointe account. The activation code will be automatically entered." FontSize="16" Foreground="#D3D3D3" TextWrapping="Wrap" />
                </StackPanel>
            </StackPanel>
        </Border>

        --><!-- Footer --><!--
        <TextBlock Grid.Row="3" Grid.ColumnSpan="2" 
           FontSize="18" FontWeight="Bold" Foreground="#707070"
           HorizontalAlignment="Center" Height="245" Margin="746,0,0,0" VerticalAlignment="Top">
            <Run Text="For tech support, call +1 888-666 0227" Foreground="#B31B1B" />
        </TextBlock>-->
    </Grid>
</Window>
