<Page x:Class="Pospointe.Signup_POS.NetworkCheckPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pospointe.Signup_POS"
      mc:Ignorable="d" 
      xmlns:gif="http://wpfanimatedgif.codeplex.com"
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="NetworkCheckPage">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0D0D0D" Offset="0"/>
                <GradientStop Color="#1A1A1A" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>


        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="800">
            <TextBlock Text="Welcome to POSPointe Setup" 
                       FontSize="36" FontWeight="Bold" Foreground="#E0E0E0"
                       HorizontalAlignment="Center" Margin="0,0,0,20"
                       TextAlignment="Center"
                       FontFamily="Segoe UI Light"/>

            <TextBlock Text="We are verifying your network connection to ensure a seamless setup experience." 
                       FontSize="18" Foreground="#B0B0B0" 
                       HorizontalAlignment="Center" TextAlignment="Center"
                       Margin="0,0,0,40"
                       FontFamily="Segoe UI"/>

            <Image Width="150" Height="150" HorizontalAlignment="Center"
                   gif:ImageBehavior.AnimatedSource="/Asset/pos1.gif"
                   Margin="0,0,0,40"/>

            <Border Background="#2D2D2D" CornerRadius="15" Padding="20" 
                    HorizontalAlignment="Center">
                <TextBlock x:Name="NetworkStatusText" 
                           FontSize="20" FontWeight="SemiBold" Foreground="#E0E0E0"
                           HorizontalAlignment="Center" TextAlignment="Center"
                           TextWrapping="Wrap" Width="600"
                           FontFamily="Segoe UI"/>
            </Border>
        </StackPanel>
    </Grid>
</Page>