<Window x:Class="Pospointe.Reports.FrmReportDateSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pospointe.Reports"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Title="FrmReportDateSelect"
        Height="1080"
        Width="1920">

    <Grid Background="#E0000000">

        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>


        <Grid  Grid.Row="1"
               Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />

            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Background="{StaticResource BorderFillBrush}"
                    Grid.Column="0"
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Grid.RowSpan="3"
                    CornerRadius="20" />
            <Grid Grid.Row="1"
                  Grid.Column="0"
                  Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>
                <StackPanel Margin="10"
                            Grid.Row="0"
                            Grid.Column="0">
                    <TextBlock  Style="{StaticResource Header2}"
                                Text="From" />
                    <DatePicker x:Name="FromDatePicker"
                                Height="40"
                                VerticalAlignment="Center"
                                Margin="0,0,20,0" />
                </StackPanel>
                <StackPanel Margin="10"
                            Grid.Row="1"
                            Grid.Column="1">
                    <TextBlock  Style="{StaticResource Header2}"
                                Text="To" />
                    <DatePicker Height="50"
                                x:Name="ToDatePicker"
                                VerticalAlignment="Center" />
                </StackPanel>
                <Button Background="Transparent"
                        x:Name="BtnGetReport"
                        Style="{StaticResource Icobtn}"
                        Grid.Column="3"
                        Click="BtnGetReport_Click"
                        HorizontalAlignment="Right"
                        Margin="0 0 30 0">
                    <iconPacks:PackIconFontAwesome Style="{StaticResource Icobtnico}"
                                                   Kind="CircleChevronRightSolid"
                                                   Width="60"
                                                   Height="50"
                                                   VerticalAlignment="Bottom" />
                </Button>

            </Grid>



            <Border Margin="10"
                    CornerRadius="20"
                    Grid.Row="0"
                    Background="{StaticResource Appboarderfill}"
                    Grid.Column="0"
                    Grid.ColumnSpan="2" />
            <TextBlock Style="{StaticResource Header1}"
                       Margin="25 0 0 0"
                       Grid.Column="0"
                       Text="Flash Report"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left" />


            <Button Background="Transparent"
                    x:Name="BtnClose"
                    Style="{StaticResource Icobtn}"
                    Grid.Column="3"
                    Click="BtnClose_Click"
                    HorizontalAlignment="Right"
                    Margin="0 0 30 0">
                <iconPacks:PackIconFontAwesome Style="{StaticResource Icobtnico}"
                                               Kind="CircleXmarkSolid"
                                               Width="60"
                                               Height="50"
                                               VerticalAlignment="Bottom" />
            </Button>





        </Grid>


    </Grid>
</Window>
