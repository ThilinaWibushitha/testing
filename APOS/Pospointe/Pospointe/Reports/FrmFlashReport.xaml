<Window x:Class="Pospointe.Reports.FrmFlashReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Loaded="Window_Loaded"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="FrmFlashReport" Height="680" Width="350" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid x:Name="MainGrid" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,10">
            <TextBlock x:Name="TxtBusinessName" Text="Shahs Halal Foods White Plains" FontSize="14" FontWeight="Bold" TextAlignment="Center" />
            <TextBlock x:Name="TxtAddress" Text="40 Mamaroneck Avenue" FontSize="12" TextAlignment="Center" />
            <TextBlock x:Name="Txtstatezip" Text="White Plains, NY 10601" FontSize="12" TextAlignment="Center" />
            <TextBlock x:Name="TxtPhonenumber" Text="(914) 949-0747" FontSize="12" TextAlignment="Center" />
            <TextBlock x:Name="TxtEmail" FontSize="12" TextAlignment="Center" />
            <TextBlock Text="FLASH REPORT" FontSize="14" FontWeight="Bold" TextAlignment="Center" Margin="0,10" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock x:Name="TxtFromDate" Text="From: 01/08/2025" FontSize="12" />
                <TextBlock Text=" - " FontSize="12" />
                <TextBlock x:Name="TxtToDate" Text="To: 01/08/2025" FontSize="12" />
            </StackPanel>
        </StackPanel>



        <StackPanel Grid.Row="2" Margin="0,10">
            <StackPanel Margin="0,10">
                <TextBlock FontSize="12" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center">
    <Run Text="============== " />
    <Run Text="SALES DETAILS" />
    <Run Text=" ==============" />
                </TextBlock>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Gross Sales:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtGrossSales" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Gross Sales w/ Tax:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtGrossWTax" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Non Tax Sales:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtNonTax" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Sales Tax:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtSalesTax" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Net Sales:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtNetSales" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
            </StackPanel>

            <!-- Refund Totals Section -->
            <StackPanel Margin="0,10">
                <TextBlock FontSize="12" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,5">
    <Run Text="============== " />
    <Run Text="REFUND TOTALS" />
    <Run Text=" ==============" />
                </TextBlock>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Cash Refunds:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtCashRefunds" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Card Refunds:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtCardRefunds" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Total Refunds:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtTotalRefunds" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
            </StackPanel>

            <!-- Tender Totals Section -->
            <StackPanel Margin="0,10">
                <TextBlock FontSize="12" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,5">
    <Run Text="============== " />
    <Run Text="TENDER TOTALS" />
    <Run Text=" ==============" />
                </TextBlock>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Cash:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtCash" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Credit/Debit:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtCreditDebit" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Gift Card:"
                               FontSize="12"
                               Grid.Column="0" />
                    <TextBlock x:Name="TxtGiftcard"
                               Text="$0"
                               FontSize="12"
                               Grid.Column="1"
                               HorizontalAlignment="Right" />
                </Grid>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Tip:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtTip" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
            </StackPanel>

            <!-- Transactions Section -->
            <StackPanel Margin="0,10">
                <TextBlock FontSize="12" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,5">
    <Run Text="============== " />
    <Run Text="TRANSACTIONS" />
    <Run Text=" ==============" />
                </TextBlock>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="# of Transactions:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtNoofTrans" Text="0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="# of Return Trans:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtNoofReturns" Text="0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
            </StackPanel>
        </StackPanel>

        <!-- Buttons Section -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button x:Name="BtnPrint" Style="{StaticResource SecBtns}" Width="50" Height="50" Margin="5" ToolTip="Print" Click="BtnPrint_Click">
                <iconPacks:PackIconMaterial Kind="Printer" Width="24" Height="24" />
            </Button>
            <Button x:Name="BtnClose" Style="{StaticResource SecBtns}" Width="50" Height="50" Margin="5" ToolTip="Close" Click="BtnClose_Click">
                <iconPacks:PackIconMaterial Kind="Close" Width="24" Height="24" />
            </Button>
            <Button x:Name="BtnSms" Style="{StaticResource SecBtns}" Width="50" Height="50" Margin="5" ToolTip="Send SMS" Click="BtnSms_Click">
                <iconPacks:PackIconMaterial Kind="MessageText" Width="24" Height="24" />
            </Button>
        </StackPanel>


    </Grid>
</Window>
