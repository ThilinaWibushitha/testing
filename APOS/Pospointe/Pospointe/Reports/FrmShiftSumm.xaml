<Window x:Class="Pospointe.Reports.FrmShiftSumm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pospointe.Reports"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="FrmShiftSumm" Height="680" Width="350">
    
    
    <Grid x:Name="MainGrid" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,10">
            <TextBlock x:Name="TxtBusinessName" Text="Shahs Halal Foods White Plains" FontSize="14" FontWeight="Bold" TextAlignment="Center" />
            <TextBlock x:Name="TxtAddress" Text="40 Mamaroneck Avenue" FontSize="12" TextAlignment="Center" />
            <TextBlock x:Name="Txtstatezip" Text="White Plains, NY 10601" FontSize="12" TextAlignment="Center" />
            <TextBlock x:Name="TxtPhonenumber" Text="(914) 949-0747" FontSize="12" TextAlignment="Center" />
            <TextBlock x:Name="TxtEmail" FontSize="12" TextAlignment="Center" />
            <TextBlock Text="SHIFT SUMMARY REPORT" FontSize="14" FontWeight="Bold" TextAlignment="Center" Margin="0,10" />
            
        </StackPanel>



        <StackPanel Grid.Row="2" Margin="0,10">
            <StackPanel Margin="0,10">
                <TextBlock FontSize="12" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center">
    <Run Text="============== " />
    <Run Text="SHIFT DETAILS" />
    <Run Text=" ==============" />
                </TextBlock>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="User Name :" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtUser" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Shift Opened :" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtOpenedShift" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Shift Closed :" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtClosedShift" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                
            </StackPanel>

            <!-- Refund Totals Section -->
            <StackPanel Margin="0,10">
                <TextBlock FontSize="12" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,5">
    <Run Text="============== " />
    <Run Text="CASH DRAWER" />
    <Run Text=" ==============" />
                </TextBlock>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Starting Cash :" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtStartingCash" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Cash Payment:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtCashpayments" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Cash Refunds:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtcashRefunds" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Expected Cash Amount :" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtExpectedCash" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Actual Cash Amount :" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtActual" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Deference :" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtDifferetce" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
            </StackPanel>

            <!-- Tender Totals Section -->
            <StackPanel Margin="0,10">
                <TextBlock FontSize="12" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,5">
    <Run Text="============== " />
    <Run Text="SALES SUMMARY" />
    <Run Text=" ==============" />
                </TextBlock>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Gross Sales:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtGrossSales" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Refunds:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtRefunds" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Discounts:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtDiscounts" Text="$0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                
            </StackPanel>

            <!-- Transactions Section -->
            <StackPanel Margin="0,10">
                <TextBlock FontSize="12" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,5">
    <Run Text="============== " />
    
    <Run Text=" ==============" />
                </TextBlock>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Cash:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtCash" Text="0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Cash Rounding:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtCashRounding" Text="0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Card:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtCard" Text="0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Tip:" FontSize="12" Grid.Column="0" />
                    <TextBlock x:Name="TxtTip" Text="0" FontSize="12" Grid.Column="1" HorizontalAlignment="Right" />
                </Grid>
            </StackPanel>
        </StackPanel>

        <!-- Buttons Section -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button x:Name="BtnPrint" Style="{StaticResource SecBtns}" Width="50" Height="50" Margin="5" ToolTip="Print" Click="BtnPrint_Click">
                <iconPacks:PackIconMaterial Kind="Printer" Width="24" Height="24" />
            </Button>
            <Button x:Name="BtnClose" Style="{StaticResource SecBtns}" Width="50" Height="50" Margin="5" ToolTip="Close" Click="BtnClose_Click">
                <iconPacks:PackIconMaterial Kind="Close" Width="24" Height="24" />
            </Button>
            <Button x:Name="BtnSms" Style="{StaticResource SecBtns}" Width="50" Height="50" Margin="5" ToolTip="Send SMS" Click="BtnSms_Click">
                <iconPacks:PackIconMaterial Kind="MessageText" Width="24" Height="24" />
            </Button>
        </StackPanel>


    </Grid>
</Window>
