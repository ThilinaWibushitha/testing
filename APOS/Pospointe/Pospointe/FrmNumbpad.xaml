<Window x:Class="Pospointe.FrmNumbpad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:Pospointe"
        ResizeMode="NoResize"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown"
        AllowsTransparency="True"
        Background="Transparent"
        Title="FrmNumbpad" Width="1920" Height="1080">

    <Grid Background="#E0000000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="3.5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="5.5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Border Background="{DynamicResource BackgroundBrush}" Grid.Column="1" Grid.Row="1" CornerRadius="20" />

        <Grid Grid.Row="1" Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="1.8*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="8*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Grid.ColumnSpan="2" Background="{StaticResource Appboarderfill}" CornerRadius="20 20 0 0" />
                <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource UiTextBlockStyle}" x:Name="UserNameDisplay" Text="Enter Amount" FontSize="20" 
                            VerticalAlignment="Center" HorizontalAlignment="Center" 
                            TextAlignment="Center" />

                <Button Margin="0 0 15 0" VerticalAlignment="Center" HorizontalAlignment="Right" Background="Transparent" x:Name="BtnClose" Style="{StaticResource IconOnlyButtonStyle}" Grid.Column="2" Click="BtnClose_Click">
                    <iconPacks:PackIconFontAwesome Style="{StaticResource Icobtnico}" Kind="CircleXmarkSolid" Height="50" Width="50" VerticalAlignment="Center" Foreground="#1D1E27" />
                </Button>


            </Grid>




            <TextBox Margin="15 0 15 0" Style="{StaticResource searchTextbox}" Grid.Row="1" Background="LightGray" BorderBrush="LightGray" x:Name="TxtEnterAmount" FontSize="24" 
                 VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                 TextAlignment="Center" IsReadOnly="False" 
                 TextChanged="TxtEnterAmount_TextChanged">
            </TextBox>

            <Grid Margin="15 0 15 15" Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Button Content="1" Click="BtnNumAmount" Style="{StaticResource PinpadNumberpad}" />
                <Button Content="2" Click="BtnNumAmount" Style="{StaticResource PinpadNumberpad}" Grid.Row="0" Grid.Column="1" />
                <Button Content="3" Click="BtnNumAmount" Style="{StaticResource PinpadNumberpad}" Grid.Row="0" Grid.Column="2" />
                <Button Content="4" Click="BtnNumAmount" Style="{StaticResource PinpadNumberpad}" Grid.Row="1" Grid.Column="0"/>
                <Button Content="5" Click="BtnNumAmount" Style="{StaticResource PinpadNumberpad}" Grid.Row="1" Grid.Column="1"/>
                <Button Content="6" Click="BtnNumAmount" Style="{StaticResource PinpadNumberpad}" Grid.Row="1" Grid.Column="2"/>
                <Button Content="7" Click="BtnNumAmount" Style="{StaticResource PinpadNumberpad}" Grid.Row="2" Grid.Column="0"/>
                <Button Content="8" Click="BtnNumAmount" Style="{StaticResource PinpadNumberpad}" Grid.Row="2" Grid.Column="1"/>
                <Button Content="9" Click="BtnNumAmount" Style="{StaticResource PinpadNumberpad}" Grid.Row="2" Grid.Column="2"/>
                <Button Content="0" Click="BtnNumAmount" Style="{StaticResource PinpadNumberpad}" Grid.Row="3" Grid.Column="1" />
                <Button Content="." Click="BtnNumAmount" Style="{StaticResource PinpadNumberpad}" Grid.Column="0" Grid.Row="3" />
                <Button Content="+/-"  Style="{StaticResource PinpadNumberpad}" Grid.Column="2" Grid.Row="3" />

                <Button Content="Enter" Grid.Column="2" Grid.Row="4"  x:Name="BtnCloc1k" Style="{StaticResource PinpadNumberpad}" Click="BtnEnter_Click" >
                    
                </Button>

                <Button Grid.Column="0" Grid.ColumnSpan="2"  Grid.Row="4"  x:Name="Btndelete" Style="{StaticResource PinpadNumberpad}" Click="Btndelete_Click" >
                    <iconPacks:PackIconFontAwesome Style="{StaticResource Icobtnico}" Kind="CircleXmarkSolid" Height="40" Width="80"/>
                </Button>

                <!--<Button Background="Transparent" x:Name="Btnenter" Style="{StaticResource IconButtonStyle}" Grid.Column="2" Grid.Row="3" Click="Button_Click" >
                    <iconPacks:PackIconFontAwesome Style="{StaticResource Icobtnico}" Kind="CircleCheckSolid" Height="40" Width="80" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" />
                </Button>-->
            </Grid>
        </Grid>

    </Grid>
</Window>
