<Window x:Class="Pospointe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        AllowsTransparency="True"
        Loaded="Window_Loaded">

    <Grid>
        <!-- Background with gradient -->
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#121212" Offset="0.0"/>
                    <GradientStop Color="#1E1E1E" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- Main Content -->
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Animated Logo -->
                <Border RenderTransformOrigin="0.5,0.5" Margin="0,0,0,30">
                    <Border.RenderTransform>
                        <ScaleTransform/>
                    </Border.RenderTransform>
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimationUsingKeyFrames 
                                        Storyboard.TargetProperty="RenderTransform.ScaleX"
                                        Duration="0:0:1.5" RepeatBehavior="Forever">
                                        <LinearDoubleKeyFrame KeyTime="0:0:0" Value="1"/>
                                        <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="1.05"/>
                                        <LinearDoubleKeyFrame KeyTime="0:0:1.0" Value="1"/>
                                    </DoubleAnimationUsingKeyFrames>
                                    <DoubleAnimationUsingKeyFrames 
                                        Storyboard.TargetProperty="RenderTransform.ScaleY"
                                        Duration="0:0:1.5" RepeatBehavior="Forever">
                                        <LinearDoubleKeyFrame KeyTime="0:0:0" Value="1"/>
                                        <LinearDoubleKeyFrame KeyTime="0:0:0.5" Value="1.05"/>
                                        <LinearDoubleKeyFrame KeyTime="0:0:1.0" Value="1"/>
                                    </DoubleAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                    <Image Source="https://i.postimg.cc/44MmSGV4/POS-POINTE-1.png" Height="180"/>
                </Border>

                <!-- Loading Text -->
                <TextBlock Name="StatusText" 
                           Text="Initializing Application..."
                           Foreground="#F0F0F0"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <!-- ProgressBar with animation -->
                <ProgressBar Name="LoadingProgressBar" 
                             Width="400"
                             Height="16"
                             Foreground="#B31B1B"
                             Background="#303030"
                             BorderThickness="0">
                    <ProgressBar.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="Value"
                                                     From="0" To="100"
                                                     Duration="0:0:2"
                                                     AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ProgressBar.Triggers>
                </ProgressBar>
            </StackPanel>
        </Grid>

        <!-- Version text at the bottom -->
        <TextBlock Text="Version 4.5.0"
                   Foreground="#808080"
                   x:Name="txtversion"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,50"/>
    </Grid>
</Window>
