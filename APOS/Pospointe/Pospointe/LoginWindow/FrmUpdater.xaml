<UserControl x:Class="Pospointe.LoginWindow.FrmUpdater"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pospointe.LoginWindow"
             mc:Ignorable="d" 
             Background="{DynamicResource BackgroundBrush}"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Software Update" Style="{StaticResource Header2}" 
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <!-- Content Section -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>

            <!-- Description -->
            <TextBlock Grid.Row="0"
                       Text="Keep your application updated for better performance, security, and new features."
                       TextWrapping="Wrap"
                       FontSize="14"
                       Foreground="Gray"
                       Margin="10"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Width="500"/>

            <!-- Update Settings -->
            <Border Grid.Row="1"
                    Background="{StaticResource BorderFillBrush}" 
                    CornerRadius="10" 
                    Margin="40 10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Automatic Update -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="40 20">
                        <TextBlock Text="Automatic Update" 
                                   Style="{StaticResource Body1}" 
                                   VerticalAlignment="Center" Margin="0 0 10 0"/>
                        <ToggleButton x:Name="TglAutoupdate" 
                                      Style="{StaticResource ToggleSwitchStyle}" 
                                      IsChecked="False"
                                      Checked="TglAutoupdate_Checked"
                                      Unchecked="TglAutoupdate_Unchecked"/>
                    </StackPanel>

                    <!-- Force Update -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="40 20">
                        <TextBlock Text="Force Update" 
                                   Style="{StaticResource Body1}" 
                                   VerticalAlignment="Center" Margin="0 0 10 0"/>
                        <ToggleButton x:Name="TglForce" 
                                      Style="{StaticResource ToggleSwitchStyle}" 
                                      IsChecked="False"
                                      Checked="TglForce_Checked" 
                                      Unchecked="TglForce_Unchecked"/>
                    </StackPanel>

                    <!-- Status Content -->
                    <ContentControl Grid.Row="1" Grid.ColumnSpan="2" x:Name="CCUpdater" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
