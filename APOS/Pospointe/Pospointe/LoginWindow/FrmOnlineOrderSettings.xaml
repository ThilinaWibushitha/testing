<UserControl
    x:Class="Pospointe.LoginWindow.FrmOnlineOrdersSetting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Pospointe.LoginWindow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d"
    Background="#F6F8FB">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock
            Grid.Row="0"
            Text="Online Orders Settings"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="26"
            FontWeight="SemiBold"
            Margin="0,30,0,20"
            Foreground="#333" />

        <!-- Main Content Card -->
        <Border
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Padding="40"
            CornerRadius="16"
            Background="White"
            Width="550"
            Effect="{DynamicResource DropShadowEffect}">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Enable Toggle -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock
                        Text="Enable Online Orders"
                        VerticalAlignment="Center"
                        FontSize="18"
                        Margin="0,0,20,0"
                        Foreground="#444" />
                    <ToggleButton
                        x:Name="TglOnlineOrders"
                        VerticalAlignment="Center"
                        Checked="TglOnlineOrders_Checked"
                        Unchecked="TglOnlineOrders_Unchecked"
                        Style="{StaticResource ToggleSwitchStyle}" />
                </StackPanel>

                <!-- Status Info -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock
                        x:Name="TxtStatus"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Status: Online Orders are DISABLED"
                        Foreground="#444"
                        TextAlignment="Center" />
                    <TextBlock
                        x:Name="TxtDebug"
                        FontSize="14"
                        Foreground="Gray"
                        Text="Settings Value: False"
                        TextAlignment="Center"
                        Visibility="Collapsed" />
                </StackPanel>

                <Separator Margin="0,20,0,20" Width="400" />

                <!-- Marketplace Printer Section -->
                <TextBlock
                    Text="Marketplace Printer"
                    FontSize="18"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,15"
                    Foreground="#333" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock
                        Text="Printer:"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Margin="0,0,20,0"
                        Foreground="#444" />
                    <ComboBox
                        x:Name="CmbMarketPrinter"
                        Width="250"
                        Height="32"
                        FontSize="14"
                        Background="#FAFAFA"
                        BorderBrush="#CCC"
                        Padding="4,2"
                        Margin="0,0,10,0" />
                </StackPanel>

                <Button
                    x:Name="BtnUpdatePrinter"
                    Content="Update Printer"
                    Width="160"
                    Height="38"
                    FontWeight="SemiBold"
                    Style="{StaticResource PinpadButton}"
                    Click="BtnUpdatePrinter_Click"
                    Margin="0,5,0,0"
                    Background="#990100"/>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
