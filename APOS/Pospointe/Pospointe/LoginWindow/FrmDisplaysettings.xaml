                        <Grid Margin="0,0,0,30">
                            <StackPanel>
                                <TextBlock Style="{StaticResource Header3}" Text="Display &amp; Tax Configuration" />
                                <TextBlock FontSize="12" Foreground="Gray" Text="Manage customer display settings and tax rates" Margin="0,6,0,0"/>
