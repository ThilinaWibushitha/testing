                        <TextBlock Style="{StaticResource Header1}" Text="General Settings" />
                        <TextBlock FontSize="13" Foreground="Gray" Text="Configure your POS display and system preferences" Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!--  Display & Tax Settings Section  -->
                <Border Margin="0,0,0,30"
                        Padding="35"
                        Background="{StaticResource BorderFillBrush}"
                        CornerRadius="18">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" Opacity="0.08" ShadowDepth="0" Color="Black"/>
                    </Border.Effect>

