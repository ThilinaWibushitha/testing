                                    Content="ðŸ’¾ Save Changes"
                                    FontSize="15"
                                    Style="{StaticResource AmountPinGiftPin}" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!--  Quick Access Items Section  -->
                <Border Margin="0,0,0,30"
                        Padding="35"
                        Background="{StaticResource BorderFillBrush}"
                        CornerRadius="18">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" Opacity="0.08" ShadowDepth="0" Color="Black"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Section Header  -->
                        <Grid Grid.Row="0" Margin="0,0,0,25">
                            <StackPanel>
                                <TextBlock Style="{StaticResource Header3}" Text="âš¡ Quick Access Items" />
                                <TextBlock FontSize="13"
                                           Foreground="Gray"
                                           Margin="0,6,0,0"
                                           Text="Select up to 2 items to display as quick access buttons on the main POS screen"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1.5*" />
                            </Grid.ColumnDefinitions>

                            <!--  Left: Selection Panel  -->
                            <StackPanel Grid.Column="0" Margin="0,0,18,0">
                                <!--  Department Filter  -->
                                <Border Margin="0,0,0,18"
                                        Padding="20"
                                        Background="{StaticResource Appboarderfill}"
                                        CornerRadius="14">
                                    <StackPanel>
                                        <TextBlock Margin="0,0,0,12"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Text="ðŸ“ Filter by Department" />
                                        <ComboBox x:Name="CmbDepartmentSelect"
                                                  Height="48"
                                                  Padding="12,0"
                                                  FontSize="14"
                                                  DisplayMemberPath="DeptName"
                                                  SelectedValuePath="DeptId"
                                                  SelectionChanged="CmbDepartmentSelect_SelectionChanged" />
                                    </StackPanel>
                                </Border>

                                <!--  Selected Items  -->
                                <Border Padding="20"
                                        Background="{StaticResource Appboarderfill}"
                                        CornerRadius="14">
                                    <StackPanel>
                                        <Grid Margin="0,0,0,15">
                                            <TextBlock VerticalAlignment="Center"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Text="âœ“ Selected Items" />
                                            <Border HorizontalAlignment="Right"
                                                    Padding="10,4"
                                                    Background="#E8F5E9"
                                                    CornerRadius="8">
                                                <TextBlock x:Name="TxtSelectionInfo"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="#2E7D32"
                                                           Text="0/2 selected" />
                                            </Border>
                                        </Grid>

                                        <ListBox x:Name="LstSelectedItems"
                                                 Height="260"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 HorizontalContentAlignment="Stretch"
                                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Margin="0,5,0,5"
                                                            Padding="18"
                                                            Background="White"
                                                            BorderBrush="#E0E0E0"
                                                            BorderThickness="2"
                                                            CornerRadius="12"
                                                            HorizontalAlignment="Stretch">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>

                                                            <Border Grid.Column="0"
                                                                    Width="65"
                                                                    Height="32"
                                                                    Margin="0,0,14,0"
                                                                    VerticalAlignment="Center"
                                                                    Background="{StaticResource ButtonBrush}"
                                                                    CornerRadius="8">
                                                                <TextBlock HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"
                                                                           FontSize="12"
                                                                           FontWeight="Bold"
                                                                           Foreground="White"
                                                                           Text="{Binding ButtonLabel}" />
                                                            </Border>

                                                            <StackPanel Grid.Column="1">
                                                                <TextBlock FontSize="14"
                                                                           FontWeight="SemiBold"
                                                                           Text="{Binding Item.ItemName}"
                                                                           TextWrapping="Wrap" />
                                                                <Border Margin="0,6,0,0"
                                                                        Padding="8,3"
                                                                        Background="#F5F5F5"
                                                                        CornerRadius="6"
                                                                        HorizontalAlignment="Left">
                                                                    <TextBlock FontSize="11"
                                                                               Foreground="#666"
                                                                               Text="{Binding DepartmentName}" />
                                                                </Border>
                                                            </StackPanel>

                                                            <Button Grid.Column="2"
                                                                    Width="32"
                                                                    Height="32"
                                                                    VerticalAlignment="Center"
                                                                    Margin="12,0,0,0"
                                                                    Click="BtnRemoveItem_Click"
                                                                    Content="âœ•"
                                                                    FontSize="16"
                                                                    FontWeight="Bold"
                                                                    Tag="{Binding}"
                                                                    Background="#FFEBEE"
                                                                    Foreground="#C62828"
                                                                    BorderThickness="0"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!--  Right: Browse Items  -->
                            <StackPanel Grid.Column="1" Margin="18,0,0,0">
                                <!--  Search  -->
                                <Border Margin="0,0,0,18"
                                        Padding="20"
                                        Background="{StaticResource Appboarderfill}"
                                        CornerRadius="14">
                                    <StackPanel>
                                        <TextBlock Margin="0,0,0,12"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Text="ðŸ” Search Items" />
                                        <TextBox x:Name="TxtSearchItems"
                                                 Height="48"
                                                 VerticalContentAlignment="Center"
                                                 FontSize="14"
                                                 Padding="12,0"
                                                 GotFocus="TxtSearchItems_GotFocus"
                                                 Text="Type to search items..."
                                                 TextChanged="TxtSearchItems_TextChanged" />
                                    </StackPanel>
                                </Border>

                                <!--  Available Items  -->
                                <Border Padding="20"
                                        Background="{StaticResource Appboarderfill}"
                                        CornerRadius="14">
                                    <StackPanel>
                                        <Grid Margin="0,0,0,15">
                                            <TextBlock VerticalAlignment="Center"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Text="ðŸ“¦ Available Items" />
                                            <Border HorizontalAlignment="Right"
                                                    Padding="10,4"
                                                    Background="#E3F2FD"
                                                    CornerRadius="8">
                                                <TextBlock x:Name="TxtItemCount"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="#1976D2"
                                                           Text="Select a department" />
                                            </Border>
                                        </Grid>

                                        <ListBox x:Name="LstDepartmentItems"
                                                 Height="280"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 SelectionChanged="LstDepartmentItems_SelectionChanged"
                                                 SelectionMode="Single"
                                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                 ScrollViewer.CanContentScroll="False"
                                                 ScrollViewer.PanningMode="VerticalOnly"
                                                 VirtualizingPanel.ScrollUnit="Pixel">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Margin="0,5,0,5"
                                                            Padding="16"
                                                            Background="White"
                                                            BorderBrush="#E0E0E0"
                                                            BorderThickness="1"
                                                            CornerRadius="10">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>

                                                            <StackPanel Grid.Column="0">
                                                                <TextBlock FontSize="14"
                                                                           FontWeight="SemiBold"
                                                                           Text="{Binding ItemName}"
                                                                           TextWrapping="Wrap" />
                                                                <TextBlock Margin="0,5,0,0"
                                                                           FontSize="11"
                                                                           Foreground="#999"
                                                                           Text="{Binding ItemId, StringFormat='ID: {0}'}" />
                                                            </StackPanel>

                                                            <Border Grid.Column="1"
                                                                    Padding="12,6"
                                                                    Background="#E8F5E9"
                                                                    CornerRadius="8"
                                                                    Margin="15,0,0,0"
                                                                    VerticalAlignment="Center">
                                                                <TextBlock FontSize="15"
                                                                           FontWeight="Bold"
                                                                           Foreground="#2E7D32"
                                                                           Text="{Binding ItemPrice, StringFormat='${0:F2}'}" />
                                                            </Border>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!--  Save Action  -->
                        <Button x:Name="BtnSaveItems"
                                Grid.Row="2"
                                Height="52"
                                Margin="0,30,0,0"
                                Click="BtnSaveItems_Click"
                                Content="âœ“ Apply Quick Access Items"
                                FontSize="15"
                                Style="{StaticResource AmountPinGiftPin}" />
                    </Grid>
                </Border>

                <!--  Default Department Section  -->
                <Border Padding="35"
                        Background="{StaticResource BorderFillBrush}"
                        CornerRadius="18">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" Opacity="0.08" ShadowDepth="0" Color="Black"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Section Header  -->
                        <Grid Grid.Row="0" Margin="0,0,0,25">
                            <StackPanel>
                                <TextBlock Style="{StaticResource Header3}" Text="ðŸ  Default Department" />
                                <TextBlock FontSize="13"
                                           Foreground="Gray"
                                           Margin="0,6,0,0"
                                           Text="Set the default department to display when the POS system starts"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Grid>

                        <Border Grid.Row="1"
                                Padding="25"
                                Background="{StaticResource Appboarderfill}"
                                CornerRadius="14">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,25,0">
                                    <TextBlock Margin="0,0,0,12"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Text="Department Selection" />
                                    <ComboBox x:Name="CmbManagementDepartment"
                                              Height="48"
                                              Padding="12,0"
                                              FontSize="14"
                                              DisplayMemberPath="DeptName"
                                              SelectedValuePath="DeptId" />

                                    <Border Margin="0,12,0,0"
                                            Padding="12,8"
                                            Background="#FFF3E0"
                                            CornerRadius="8">
                                        <TextBlock x:Name="TxtManagementStatus"
                                                   FontSize="12"
                                                   FontStyle="Italic"
                                                   Foreground="#E65100"
                                                   Text="No default department set" />
                                    </Border>
                                </StackPanel>

                                <Button x:Name="BtnSaveDepartmentManagement"
                                        Grid.Column="1"
                                        Height="48"
                                        Margin="0,27,0,0"
                                        VerticalAlignment="Top"
                                        Click="BtnSaveDepartmentManagement_Click"
                                        Content="Set as Default"
                                        FontSize="14"
                                        Style="{StaticResource AmountPinGiftPin}" />
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!--  Custom Message Box Overlay  -->
        <Grid x:Name="CustomMessageOverlay"
              Background="#90000000"
              Visibility="Collapsed">
            <Grid.Effect>
                <BlurEffect Radius="25" />
            </Grid.Effect>
        </Grid>

        <Border x:Name="CustomMessageBorder"
                Padding="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{StaticResource BackgroundBrush}"
                CornerRadius="20"
                Visibility="Collapsed"
                Width="700">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30"
                                  Opacity="0.3"
                                  ShadowDepth="0"
                                  Color="Black" />
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Header  -->
                <Border Grid.Row="0"
                        Padding="30,25"
                        Background="{StaticResource ButtonBrush}"
                        CornerRadius="20,20,0,0">
                    <TextBlock x:Name="CustomMessageHeader"
                               HorizontalAlignment="Center"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               Text="Alert" />
                </Border>

                <!--  Message Content  -->
                <Border Grid.Row="1" Padding="40,30">
                    <TextBlock x:Name="CustomMessageText"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               LineHeight="24"
                               Style="{StaticResource Header2}"
                               Text="Message will appear here"
                               TextAlignment="Center"
                               TextWrapping="Wrap" />
                </Border>

                <!--  Button  -->
                <Border Grid.Row="2" Padding="40,20,40,30">
                    <Button x:Name="BtnCustomMessageOk"
                            Height="48"
                            HorizontalAlignment="Stretch"
                            Background="{StaticResource ButtonBrush}"
                            BorderThickness="0"
                            Click="BtnCustomMessageOk_Click"
                            FontFamily="Tahoma"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{StaticResource Buttonfont}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="12">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#4A4A4A" />
                                                    <Setter Property="Foreground" Value="White" />
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#5A5A5A" />
                                                    <Setter Property="Foreground" Value="White" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <TextBlock VerticalAlignment="Center" Text="âœ“ Okay" />
                    </Button>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>