<UserControl x:Class="Pospointe.LoginWindow.UpdateAvailableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"

             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pospointe.LoginWindow"
             mc:Ignorable="d"              
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Border CornerRadius="10" Padding="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>


            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                <Image Source="https://i.postimg.cc/7YKbKFNG/POS-POINTE-1.png" Width="50" Height="50" Margin="10"/>
                <StackPanel>
                    <TextBlock Text="POSpointe" Style="{StaticResource Header3}"/>
                    <TextBlock Text="ASN IT Inc." Style="{StaticResource Header3}"/>
                    <TextBlock x:Name="TxtVersion" Text="N/A" Style="{StaticResource Header3}"/>
                </StackPanel>
            </StackPanel>

            <TextBlock Style="{StaticResource Header3}" Grid.Row="1" TextWrapping="Wrap" Margin="10,10,10,10">
                        Update Found!
                
            </TextBlock>


            <TextBlock Style="{StaticResource Header3}" Grid.Row="2" Text="Learn more..." Foreground="LightBlue" FontSize="14" Cursor="Hand" 
                       TextDecorations="Underline" Margin="10,5,10,10"/>


            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                
            </Grid>


            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Button  Style="{StaticResource btnItems}" Content="Update Now" Click="BtnUpdate_Click" Margin="5"/>
                <Button Grid.Column="1" Style="{StaticResource btnItems}" Content="Update Overnight" Click="BtnUpdateOvernight_Click" Margin="5"  />

            </Grid>


            

            


        </Grid>
    </Border>
</UserControl>

