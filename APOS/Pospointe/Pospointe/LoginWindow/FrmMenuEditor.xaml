<Window x:Class="Pospointe.LoginWindow.FrmMenuEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pospointe.LoginWindow"
        mc:Ignorable="d"
        Title="FrmMenuEditor" Height="450" Width="800">
    <Grid>
        <!-- Header -->
        <TextBlock Text="Menu Editor" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10" />

        <!-- DataGrid to Show Menu Items -->
        <DataGrid Name="MenuDataGrid" AutoGenerateColumns="False" 
                  ItemsSource="{Binding Items}"
                  Margin="10,50,10,60" 
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <!-- Item Name Column -->
                <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="*" />

                <!-- List Order Column -->
                <DataGridTextColumn Header="List Order" Binding="{Binding ListOrder}" Width="*" />

                <!-- Actions Column -->
                <DataGridTemplateColumn Header="Actions">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Move Up" Width="80" Margin="5" 
                                        CommandParameter="{Binding}" 
                                        Click="MoveUp_Click" />
                                <Button Content="Move Down" Width="80" Margin="5" 
                                        CommandParameter="{Binding}" 
                                        Click="MoveDown_Click" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Save Button -->
        <Button Content="Save Changes" Name="SaveButton" Width="150" Height="40" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10"
                Click="SaveButton_Click" />

        <!-- Cancel Button -->
        <Button Content="Cancel" Name="CancelButton" Width="150" Height="40" 
                HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10"
                Click="CancelButton_Click" />

    </Grid>
</Window>
