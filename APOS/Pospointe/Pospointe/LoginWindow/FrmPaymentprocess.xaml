<UserControl x:Class="Pospointe.LoginWindow.FrmPaymentprocess"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pospointe.LoginWindow"
             mc:Ignorable="d" 
             Background="{DynamicResource BackgroundBrush}"
             Loaded="UserControl_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.ColumnSpan="2" Grid.Column="0" Text="Payment Integration" Style="{StaticResource Header2}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Button Background="#990100" x:Name="BtnUpdate" Height="30" Width="100" FontSize="10" Style="{StaticResource PinpadButton}" Grid.Column="1" Content="Update" Click="BtnUpdate_Click_1"/>
            
        </Grid>
        

        <Grid Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>




            <Border Grid.Row="0">
                <TextBlock Text="Set up your credit card processing.&#x0a;Quick Tip: Press 'Detect PAX' to find your device"
        TextWrapping="Wrap"
        FontSize="14"
        Foreground="Gray"
        Margin="10"
        HorizontalAlignment="Center"
        TextAlignment="Center"
        Width="500"/>
            </Border>


            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                
                
                <Border Grid.Column="1" Grid.ColumnSpan="2" Background="{StaticResource BorderFillBrush}" CornerRadius="10" >
                    <ContentControl x:Name="CCUpdater" Grid.Column="1" Grid.ColumnSpan="2"  />
                </Border>


                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                   

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Text="Connection Settings" Style="{StaticResource Header3}" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <TextBlock Grid.Column="0" Grid.Row="1" Text="Method" Style="{StaticResource Body1}" VerticalAlignment="Center" Margin="40 0 0 0"/>
                    <TextBlock Grid.Column="0" Grid.Row="2" Text="IP Address" Style="{StaticResource Body1}" VerticalAlignment="Center" Margin="40 0 0 0"/>
                    <TextBlock Grid.Column="0" Grid.Row="3" Text="Port" Style="{StaticResource Body1}" VerticalAlignment="Center" Margin="40 0 0 0"/>

                    <ComboBox  x:Name="CmbCCMethod" Margin="10" Grid.Column="1" Grid.Row="1" SelectionChanged="CmbCCMethod_SelectionChanged">
                        <ComboBoxItem Content="Manual Express" />
                        <ComboBoxItem Content="PAX_IP" />
                        <ComboBoxItem Content="PAX_USB" />
                    </ComboBox>
                    
                    

                    <TextBox x:Name="TxtIPAddress" Foreground="Black" FontSize="10" Margin="10" Grid.Column="1" Grid.Row="2" />

                    <TextBox x:Name="TxtPortNum" Foreground="Black" FontSize="10" Margin="10" Grid.Column="1" Grid.Row="3" />



                    <Button Margin="10" Grid.Column="1" Grid.Row="4" x:Name="BtnDetectPAX" Content="Detect PAX" Click="BtnDetectPAX_Click" />


                </Grid>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    

                    <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Text="Additional Settings" Style="{StaticResource Header3}" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <TextBlock  Grid.Row="1"  Style="{StaticResource Body1}" Text="Enable TIP" VerticalAlignment="Center" Margin="40 0 0 0"/>
                    <ToggleButton Grid.Row="1" Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" x:Name="ChkEnableTip"  Margin="10" HorizontalAlignment="Left" Unchecked="ChkEnableTip_Unchecked" Checked="ChkEnableTip_Checked"/>

                    <TextBlock  Grid.Row="2" Grid.Column="0"  Style="{StaticResource Body1}" Text="Request Signature" VerticalAlignment="Center" Margin="40 0 0 0"/>
                    <ToggleButton Grid.Row="2" Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" x:Name="Chk"  Margin="10" HorizontalAlignment="Left"/>

                    <TextBlock  Grid.Row="3" Grid.Column="0"  Style="{StaticResource Body1}" Text="Auto Batch" VerticalAlignment="Center" Margin="40 0 0 0"/>
                    <ToggleButton Grid.Row="3" Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" x:Name="ChkAuto"  Margin="10" HorizontalAlignment="Left"/>

                    <TextBlock  Grid.Row="4" Grid.Column="0"  Style="{StaticResource Body1}" Text="Buit-in CD (A Series)" VerticalAlignment="Center" Margin="40 0 0 0"/>
                    <ToggleButton Grid.Row="4" Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" x:Name="ChkCusCD"  Margin="10" HorizontalAlignment="Left"/>


                    <TextBlock Grid.Row="5" Grid.Column="0" Style="{StaticResource Body1}" 
           Text="Auto Fix" VerticalAlignment="Center" Margin="40 0 0 0"/>

                    <ToggleButton Grid.Row="5" Grid.Column="1" 
              Style="{StaticResource ToggleSwitchStyle}" 
              x:Name="Chkfix"  
              Margin="10"
              HorizontalAlignment="Left"
              Checked="Chkfix_Checked"
              Unchecked="Chkfix_Unchecked"/>

                    
                    <TextBlock  Grid.Row="6" Grid.Column="0"  Style="{StaticResource Body1}" Text="Select Date" VerticalAlignment="Center" Margin="40 0 0 0"/>
                    


                </Grid>




            </Grid>

        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>



        </Grid>








        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>

        </Grid.RowDefinitions>


        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>


            <Label Style="{StaticResource UiLabelHeadingStyle}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Connection Settings"/>

            <ComboBox Style="{StaticResource CustomComboBoxStyle}" 
          ItemContainerStyle="{StaticResource CustomComboBoxItemStyle}" 
          x:Name="CmbCCMethod" 
          Margin="10" 
          Grid.Column="1" 
          Grid.Row="1">
                <ComboBoxItem Content="Manual Express" />
                <ComboBoxItem Content="PAX_IP" />
                <ComboBoxItem Content="PAX_USB" />
            </ComboBox>


            <TextBlock Style="{StaticResource UiTextBlockStyle}" Margin="40 0 0 0" Text="Select Method" 
           VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="LblSelectCCmedtod" Grid.Column="0" Grid.Row="1" TextWrapping="Wrap"  />

            <TextBlock Style="{StaticResource UiTextBlockStyle}" Margin="40 0 0 0" Text="IP Address" 

                       VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="LblIPAddress" Grid.Column="0" Grid.Row="2" TextWrapping="Wrap"  />

            



            

            


        </Grid>

        

        <Button Margin="80 0 80 10"  Style="{StaticResource AmountPinGiftPin}"  Content="Update" Grid.Column="1" Grid.Row="2"  />


        <Grid Grid.Column="0" Grid.Row="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Label Style="{StaticResource UiLabelHeadingStyle}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Auto Batch Settings"/>

            <ToggleButton Grid.Row="1" Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" x:Name="ChkAutobacth" Content="Turn On Customer Display" Margin="10" HorizontalAlignment="Left"/>
            <TextBlock  Grid.Row="1" Grid.Column="0" Style="{StaticResource UiTextBlockStyle}" Text="Enable Auto Batch" VerticalAlignment="Center" Margin="40 0 0 0"/>
            <TextBlock  Grid.Row="2" Grid.Column="0" Style="{StaticResource UiTextBlockStyle}" Text="Select Time" VerticalAlignment="Center" Margin="40 0 0 0"/>



        </Grid>

        <Grid Grid.Column="1" Grid.Row="0" ShowGridLines="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Label Style="{StaticResource UiLabelHeadingStyle}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Additional Settings"/>

            
            <TextBlock  Grid.Row="1" Grid.Column="0" Style="{StaticResource UiTextBlockStyle}" Text="Enable TIP" VerticalAlignment="Center" Margin="40 0 0 0"/>

            <ToggleButton Grid.Row="2" Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" x:Name="ChkHoldprice" Content="Turn On Customer Display" Margin="10" HorizontalAlignment="Left"/>
            <TextBlock  Grid.Row="2" Grid.Column="0" Style="{StaticResource UiTextBlockStyle}" Text="Request Signature" VerticalAlignment="Center" Margin="40 0 0 0"/>

           

        </Grid>-->

    </Grid>
</UserControl>
