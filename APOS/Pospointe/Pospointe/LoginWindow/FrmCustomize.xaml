<UserControl x:Class="Pospointe.LoginWindow.FrmCustomize"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="{DynamicResource BackgroundBrush}"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="0,30,0,20">
            <TextBlock Text="Theme Appearance" 
                       Style="{StaticResource Header2}" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Personalize your experience"
                       FontSize="12"
                       Foreground="#808080"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"
                       Opacity="0.7"/>
        </StackPanel>

        <!-- Content Section -->
        <Grid Grid.Row="1" Margin="40,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Description -->
            <Border Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="Select a theme to customize the appearance of the application. Light Mode offers a bright interface, while Dark Mode provides a sleek, low-light experience."
                           TextWrapping="Wrap"
                           FontSize="14"
                           Foreground="#666666"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           MaxWidth="600"
                           LineHeight="22"/>
            </Border>

            <!-- Theme Options -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Light Mode Card -->
                <Border Grid.Column="0" 
                        Background="{StaticResource BorderFillBrush}" 
                        CornerRadius="20"
                        Padding="20"
                        Cursor="Hand">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" 
                                         BlurRadius="15" 
                                         Opacity="0.1" 
                                         Color="Black"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Preview Container -->
                        <Border Grid.Row="0" 
                                Background="#F3F4F8" 
                                CornerRadius="12"
                                Margin="0,0,0,20"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1">
                            <Image Source="https://i.postimg.cc/gks81ZTr/123.jpg" 
                                   Stretch="Uniform"
                                   Margin="15"/>
                        </Border>

                        <!-- Label and Radio Button -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Light Mode" 
                                          Style="{StaticResource Header3}" 
                                          FontWeight="SemiBold"/>
                                <TextBlock Text="Bright and clear" 
                                          FontSize="11"
                                          Foreground="#999999"
                                          Margin="0,2,0,0"/>
                            </StackPanel>

                            <RadioButton Grid.Column="1" 
                                        x:Name="RadioLightMode" 
                                        GroupName="ThemeGroup" 
                                        VerticalAlignment="Center"
                                        Margin="10,0,0,0"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Dark Mode Card -->
                <Border Grid.Column="2" 
                        Background="{StaticResource BorderFillBrush}" 
                        CornerRadius="20"
                        Padding="20"
                        Cursor="Hand">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" 
                                         BlurRadius="15" 
                                         Opacity="0.1" 
                                         Color="Black"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Preview Container -->
                        <Border Grid.Row="0" 
                                Background="#121212" 
                                CornerRadius="12"
                                Margin="0,0,0,20"
                                BorderBrush="#2A2A2A"
                                BorderThickness="1">
                            <Image Source="https://i.postimg.cc/XYt3vZyg/Sandwich-Menu-2.jpg" 
                                   Stretch="Uniform"
                                   Margin="15"/>
                        </Border>

                        <!-- Label and Radio Button -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Dark Mode" 
                                          Style="{StaticResource Header3}" 
                                          FontWeight="SemiBold"/>
                                <TextBlock Text="Easy on the eyes" 
                                          FontSize="11"
                                          Foreground="#999999"
                                          Margin="0,2,0,0"/>
                            </StackPanel>

                            <RadioButton Grid.Column="1" 
                                        x:Name="RadioDarkMode" 
                                        GroupName="ThemeGroup" 
                                        VerticalAlignment="Center"
                                        Margin="10,0,0,0"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Footer Section -->
        <Grid Grid.Row="2" Margin="40,20,40,30">
            <Button HorizontalAlignment="Center"
                    MinWidth="200"
                    Height="45"
                    Style="{StaticResource PinpadButton}" 
                    Content="Apply Theme" 
                    FontSize="15" 
                    FontWeight="SemiBold"
                    Click="UpdateThemeButton_Click">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="2" 
                                     BlurRadius="10" 
                                     Opacity="0.2" 
                                     Color="Black"/>
                </Button.Effect>
            </Button>
        </Grid>
    </Grid>
</UserControl>
