<Window x:Class="Pospointe.LoginWindow.FrmLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pospointe.LoginWindow"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Maximized"
        Loaded="Window_Loaded"
        Background="{DynamicResource BackgroundBrush}"
        Title="FrmLogin" Height="768" Width="1366">



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="2.5*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1"
                    Background="{StaticResource BorderFillBrush}" 
                    CornerRadius="0,0,33,33">
                <Image Source="https://i.postimg.cc/7YKbKFNG/POS-POINTE-1.png" 
                       Stretch="Uniform" />
            </Border>
        </Grid>


        <Grid Grid.Row="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Viewbox Grid.Row="1" Grid.Column="1"   >
                <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="MainStackPanel" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <UniformGrid x:Name="MyUniformGrid" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                </ScrollViewer>
            </Viewbox>
        </Grid>


        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1" BorderBrush="{StaticResource BorderLineBrush}"
                    Background="{StaticResource BorderFillBrush}" CornerRadius="33,33,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />

                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="DateTimeTextBlock" Grid.Column="3" 
                                Text="{Binding CurrentDateTime}" 
                                HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" 
                                FontSize="16" Style="{StaticResource Header2}" />


                    <Button x:Name="BtnSettings" Style="{StaticResource IconOnlyButtonStyle}" Click="BtnSettings_Click_1" Grid.Column="0">
                        <iconPacks:PackIconMaterial Kind="WrenchCogOutline" Style="{StaticResource IconOnlyButtonIconStyle}" />
                    </Button>

                    <Button x:Name="BtnAbout" Style="{StaticResource IconOnlyButtonStyle}" Click="BtnAbout_Click" Grid.Column="1">
                        <iconPacks:PackIconMaterial Kind="InformationOutline" Style="{StaticResource IconOnlyButtonIconStyle}" />
                    </Button>

                    <Button x:Name="BtnRequstsupp" Style="{StaticResource IconOnlyButtonStyle}" Click="BtnRequstsupp_Click" Grid.Column="2">
                        <iconPacks:PackIconMaterial Kind="FaceAgent" Style="{StaticResource IconOnlyButtonIconStyle}" />
                    </Button>

                    <Button x:Name="BtnClock" Style="{StaticResource IconOnlyButtonStyle}" Click="BtnClock_Click" Grid.Column="4">
                        <iconPacks:PackIconMaterial Kind="AccountClockOutline" Style="{StaticResource IconOnlyButtonIconStyle}" />
                    </Button>

                    <Button x:Name="BtnExit" Style="{StaticResource IconOnlyButtonStyle}" Click="BtnExit_Click" Grid.Column="5">
                        <iconPacks:PackIconMaterial Kind="Logout" Style="{StaticResource IconOnlyButtonIconStyle}" />
                    </Button>
                    

                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
