modules = ["dotnet-7.0", "web", "dotnet-8.0"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start API Server"

[[workflows.workflow]]
name = "Start API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd \"API/mypospointe-API/mypospointe-API/my pospointe\" && dotnet run"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 46559
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["dotnet", "run", "--project", "API/mypospointe-API/mypospointe-API/my pospointe/my pospointe API.csproj", "--no-build"]
build = ["dotnet", "build", "API/mypospointe-API/mypospointe-API/my pospointe/my pospointe API.csproj", "-c", "Release"]
